<div class="px-6 py-6 max-w-[1600px] mx-auto">

    <!-- Header Actions -->
    <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">รายการสินค้า</h1>
            <p class="text-slate-500">จัดการข้อมูลสินค้า ราคา และการเชื่อมต่อ Marketplace</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
            <!-- Search -->
            <form action="/fulfillment/products" method="GET" class="relative group">
                <input type="text" name="q" placeholder="ค้นหา (ชื่อ, SKU, Code)..."
                    value="<%= pagination.search || '' %>"
                    class="pl-10 pr-4 py-2 border border-slate-200 rounded-lg text-sm w-full sm:w-64 focus:outline-none focus:ring-2 focus:ring-emerald-500 hover:border-emerald-300 transition-all">
                <i
                    class="fas fa-search absolute left-3 top-2.5 text-slate-400 group-hover:text-emerald-500 transition-colors"></i>
                <% if(pagination.limit !==20) { %>
                    <input type="hidden" name="limit" value="<%= pagination.limit %>">
                    <% } %>
            </form>

            <button onclick="openOnlineImportModal()"
                class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-all shadow-sm active:scale-95">
                <i class="fas fa-cloud-download-alt"></i> เพิ่มจากรายการขาย Online
            </button>

            <a href="/fulfillment/products/create"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-all shadow-sm active:scale-95">
                <i class="fas fa-plus"></i> เพิ่มสินค้าใหม่
            </a>
        </div>
    </div>

    <!-- Controls & Filters -->
    <div class="flex justify-between items-center mb-4">
        <div class="text-sm text-slate-500">
            แสดง <%= (pagination.page - 1) * (pagination.limit==='all' ? pagination.totalItems : pagination.limit) + 1
                %>
                ถึง <%= Math.min(pagination.page * (pagination.limit==='all' ? pagination.totalItems :
                    pagination.limit), pagination.totalItems) %>
                    จากทั้งหมด <%= pagination.totalItems %> รายการ
        </div>
        <div class="flex items-center gap-2">
            <span class="text-xs text-slate-500">แสดงต่อหน้า:</span>
            <select onchange="window.location.href='?limit='+this.value+'&q=<%= pagination.search %>'"
                class="text-xs border-slate-200 rounded-lg focus:ring-emerald-500 focus:border-emerald-500 p-1.5">
                <option value="20" <%=pagination.limit==20 ? 'selected' : '' %>>20</option>
                <option value="50" <%=pagination.limit==50 ? 'selected' : '' %>>50</option>
                <option value="100" <%=pagination.limit==100 ? 'selected' : '' %>>100</option>
                <option value="all" <%=pagination.limit=='all' ? 'selected' : '' %>>ทั้งหมด</option>
            </select>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden mb-6">
        <div class="overflow-x-auto">
            <table class="w-full text-left divide-y divide-gray-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-[80px]">รูปภาพ</th>
                        <th class="px-6 py-4 font-semibold text-slate-700">สินค้า</th>
                        <th class="px-6 py-4 font-semibold text-slate-700">รหัส / SKU</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 text-right">ราคาต้นทุน</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 text-right">ราคาขาย</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 text-right">คงเหลือ</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-[100px] text-center">สถานะ</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-[100px] text-right">จัดการ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                    <% if (products.length===0) { %>
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-slate-500">
                                <div class="flex flex-col items-center">
                                    <i class="fas fa-box-open text-slate-300 text-4xl mb-3"></i>
                                    <h3 class="font-medium text-slate-900">ไม่พบรายการสินค้า</h3>
                                    <p class="text-sm mt-1">ลองเพิ่มสินค้าใหม่ หรือค้นหาด้วยคำอื่น</p>
                                    <% if(pagination.search) { %>
                                        <a href="/fulfillment/products"
                                            class="mt-2 text-emerald-600 hover:underline">ล้างคำค้นหา</a>
                                        <% } %>
                                </div>
                            </td>
                        </tr>
                        <% } else { %>
                            <% products.forEach(p=> {
                                let images = [];
                                try { images = JSON.parse(p.image_urls); } catch(e) {}
                                const mainImage = images.length > 0 ? images[0] :
                                'https://via.placeholder.com/50?text=No+Img';
                                %>
                                <tr class="hover:bg-slate-50 transition-colors group">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div
                                            class="w-12 h-12 rounded-lg bg-slate-100 border border-slate-200 overflow-hidden flex items-center justify-center">
                                            <img src="<%= mainImage %>" alt="Product"
                                                class="w-full h-full object-cover">
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div
                                            class="font-bold text-slate-800 text-sm group-hover:text-emerald-700 transition-colors">
                                            <%= p.name %>
                                        </div>
                                        <div class="text-xs text-slate-500 truncate max-w-[250px] mt-0.5">
                                            <%= p.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex flex-col gap-1">
                                            <span
                                                class="text-[10px] font-mono font-bold bg-slate-100 px-1.5 py-0.5 rounded w-fit text-slate-600 border border-slate-200">
                                                <%= p.code %>
                                            </span>
                                            <span class="text-xs text-slate-500 font-mono">Sku: <span
                                                    class="text-slate-700">
                                                    <%= p.sku %>
                                                </span></span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-right font-mono text-slate-600 whitespace-nowrap text-sm">
                                        <%= parseFloat(p.cost).toLocaleString('th-TH', { minimumFractionDigits: 2 }) %>
                                    </td>
                                    <td
                                        class="px-6 py-4 text-right font-bold text-slate-800 font-mono whitespace-nowrap text-sm">
                                        <%= parseFloat(p.sale_price).toLocaleString('th-TH', { minimumFractionDigits: 2
                                            }) %>
                                    </td>
                                    <td class="px-6 py-4 text-right whitespace-nowrap">
                                        <% if(parseFloat(p.total_quantity)> 0) { %>
                                            <span
                                                class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-md bg-emerald-50 text-emerald-700 text-xs font-bold border border-emerald-100">
                                                <i class="fas fa-cubes text-[10px]"></i>
                                                <%= parseFloat(p.total_quantity).toLocaleString() %>
                                            </span>
                                            <% } else { %>
                                                <span class="text-slate-300 text-xs italic">หมด/0</span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 text-center whitespace-nowrap">
                                        <span
                                            class="inline-flex items-center rounded-full px-2.5 py-1 text-xs font-semibold ring-1 ring-inset <%= p.status === 'active' ? 'bg-emerald-50 text-emerald-700 ring-emerald-600/20' : 'bg-slate-50 text-slate-600 ring-slate-500/10' %>">
                                            <%= p.status %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right whitespace-nowrap">
                                        <a href="/fulfillment/products/<%= p.id %>/edit"
                                            class="inline-flex items-center justify-center w-8 h-8 rounded-full text-slate-400 hover:text-emerald-600 hover:bg-emerald-50 transition-all">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination Footer -->
    <% if (pagination.totalPages> 1) { %>
        <div class="flex justify-center pb-8">
            <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <a href="?page=<%= Math.max(1, pagination.page - 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                    class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 disabled:opacity-50">
                    <span class="sr-only">Previous</span>
                    <i class="fas fa-chevron-left h-5 w-5"></i>
                </a>

                <% for(let i=1; i <=pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                        class="relative inline-flex items-center px-4 py-2 text-sm font-semibold <%= i === pagination.page ? 'z-10 bg-emerald-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600' : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>">
                        <%= i %>
                    </a>
                    <% } %>

                        <a href="?page=<%= Math.min(pagination.totalPages, pagination.page + 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                            class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                            <span class="sr-only">Next</span>
                            <i class="fas fa-chevron-right h-5 w-5"></i>
                        </a>
            </nav>
        </div>
        <% } %>

            <!-- Online Import Modal -->
            <div id="onlineImportModal"
                class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4">
                <div class="bg-white rounded-2xl shadow-xl w-full max-w-2xl overflow-hidden max-h-[90vh] flex flex-col">
                    <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50">
                        <h3 class="font-bold text-slate-800 flex items-center gap-2">
                            <i class="fas fa-cloud-download-alt text-indigo-600"></i>
                            นำเข้าสินค้าจากรายการขาย Online
                        </h3>
                        <button onclick="closeOnlineImportModal()"
                            class="text-slate-400 hover:text-slate-600 transition-colors">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="p-6 overflow-y-auto flex-1">
                        <p class="text-sm text-slate-500 mb-4">
                            ระบบพบรายการ SKU จาก Shopee/TikTok/Lazada ที่ยังไม่มีในระบบของคุณ
                            เลือกรายการที่ต้องการเพิ่มเป็นรหัสสินค้า
                        </p>

                        <div id="onlineCandidatesList" class="space-y-2">
                            <!-- Loaded via JS -->
                            <div class="py-12 text-center text-slate-400">
                                <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
                                <p>กำลังโหลดข้อมูล...</p>
                            </div>
                        </div>
                    </div>
                    <div class="px-6 py-4 border-t border-slate-100 flex justify-end gap-3 bg-slate-50">
                        <button onclick="closeOnlineImportModal()"
                            class="px-4 py-2 text-slate-600 hover:bg-slate-200 rounded-lg transition-all">
                            ยกเลิก
                        </button>
                        <button id="btnConfirmImport" onclick="confirmImport()" disabled
                            class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2">
                            <i class="fas fa-check"></i> นำเข้าที่เลือก (<span id="selectedCount">0</span>)
                        </button>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                let candidates = [];
                let selectedSkus = new Set();

                function openOnlineImportModal() {
                    document.getElementById('onlineImportModal').classList.remove('hidden');
                    loadOnlineCandidates();
                }

                function closeOnlineImportModal() {
                    document.getElementById('onlineImportModal').classList.add('hidden');
                }

                async function loadOnlineCandidates() {
                    const listContainer = document.getElementById('onlineCandidatesList');
                    try {
                        const res = await fetch('/api/fulfillment/products/online-candidates');
                        const data = await res.json();

                        if (data.success) {
                            candidates = data.candidates;
                            if (candidates.length === 0) {
                                listContainer.innerHTML = `
                            <div class="py-12 text-center text-slate-500">
                                <i class="fas fa-check-circle text-emerald-500 text-4xl mb-3"></i>
                                <p class="font-bold">ว้าว! สินค้าของคุณครบถ้วนแล้ว</p>
                                <p class="text-sm">ไม่พบ SKU ใหม่จากรายการขายที่ยังไม่ได้เพิ่มในระบบ</p>
                            </div>
                        `;
                                return;
                            }

                            let html = `
                        <div class="flex items-center justify-between mb-2 px-2">
                            <label class="flex items-center gap-2 text-xs font-bold text-slate-400 uppercase tracking-widest cursor-pointer">
                                <input type="checkbox" onchange="toggleSelectAll(this)" class="rounded text-indigo-600 focus:ring-indigo-500">
                                เลือกทั้งหมด
                            </label>
                        </div>
                    `;

                            candidates.forEach((c, index) => {
                                html += `
                            <label class="flex items-center gap-4 p-3 rounded-xl border border-slate-100 hover:border-indigo-200 hover:bg-indigo-50/30 transition-all cursor-pointer group">
                                <input type="checkbox" value="${c.sku}" onchange="toggleSku('${c.sku}', this.checked)" class="sku-checkbox rounded text-indigo-600 focus:ring-indigo-500 w-5 h-5">
                                <div class="flex-1 min-w-0">
                                    <div class="font-bold text-slate-800 text-sm truncate">${c.product_name || 'ไม่ระบุชื่อสินค้า'}</div>
                                    <div class="text-xs font-mono text-slate-500 flex items-center gap-2">
                                        <span class="bg-indigo-100 text-indigo-700 px-1.5 py-0.5 rounded text-[10px]">SKU: ${c.sku}</span>
                                    </div>
                                </div>
                            </label>
                        `;
                            });

                            listContainer.innerHTML = html;
                        }
                    } catch (err) {
                        listContainer.innerHTML = `<p class="text-red-500">เกิดข้อผิดพลาด: ${err.message}</p>`;
                    }
                }

                function toggleSku(sku, checked) {
                    if (checked) selectedSkus.add(sku);
                    else selectedSkus.delete(sku);
                    updateUI();
                }

                function toggleSelectAll(master) {
                    const checkboxes = document.querySelectorAll('.sku-checkbox');
                    checkboxes.forEach(cb => {
                        cb.checked = master.checked;
                        toggleSku(cb.value, master.checked);
                    });
                }

                function updateUI() {
                    const btn = document.getElementById('btnConfirmImport');
                    const counter = document.getElementById('selectedCount');
                    counter.innerText = selectedSkus.size;
                    btn.disabled = selectedSkus.size === 0;
                }

                async function confirmImport() {
                    if (selectedSkus.size === 0) return;

                    const toImport = candidates.filter(c => selectedSkus.has(c.sku));

                    Swal.fire({
                        title: 'ยืนยันการนำเข้า?',
                        text: `คุณกำลังจะเพิ่มสินค้าใหม่จำนวน ${toImport.length} รายการเข้าสู่ระบบ`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#4f46e5',
                        cancelButtonColor: '#64748b',
                        confirmButtonText: 'ยืนยันนำเข้า',
                        cancelButtonText: 'ยกเลิก'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            Swal.showLoading();
                            try {
                                const res = await fetch('/api/fulfillment/products/import-online', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ products: toImport })
                                });
                                const data = await res.json();

                                if (data.success) {
                                    Swal.fire({
                                        title: 'นำเข้าสำเร็จ!',
                                        text: `เพิ่มสินค้าใหม่จำนวน ${data.importedCount} รายการเรียบร้อยแล้ว`,
                                        icon: 'success'
                                    }).then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire('ข้อผิดพลาด', data.message || 'ไม่สามารถนำเข้าข้อมูลได้', 'error');
                                }
                            } catch (err) {
                                Swal.fire('ข้อผิดพลาด', err.message, 'error');
                            }
                        }
                    });
                }
            </script>
</div>