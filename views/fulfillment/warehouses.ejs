<div class="px-6 py-6 max-w-[1600px] mx-auto">

    <!-- Header Actions -->
    <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">จัดการคลังสินค้า</h1>
            <p class="text-slate-500">บริหารจัดการคลังสินค้าและจุดจัดเก็บ</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">

            <!-- Search -->
            <form action="/fulfillment/warehouses" method="GET" class="relative group">
                <input type="text" name="q" placeholder="ค้นหาชื่อคลังสินค้า..." value="<%= pagination.search || '' %>"
                    class="pl-10 pr-4 py-2 border border-slate-200 rounded-lg text-sm w-full sm:w-64 focus:outline-none focus:ring-2 focus:ring-emerald-500 hover:border-emerald-300 transition-all">
                <i
                    class="fas fa-search absolute left-3 top-2.5 text-slate-400 group-hover:text-emerald-500 transition-colors"></i>
                <% if(pagination.limit !==20) { %>
                    <input type="hidden" name="limit" value="<%= pagination.limit %>">
                    <% } %>
            </form>

            <button onclick="toggleModal('addWarehouseModal')"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-all shadow-sm active:scale-95">
                <i class="fas fa-plus"></i> เพิ่มคลังสินค้า
            </button>
        </div>
    </div>

    <!-- Controls & Filters (PerPage) -->
    <div class="flex justify-between items-center mb-4">
        <div class="text-sm text-slate-500">
            แสดง <%= (pagination.page - 1) * (pagination.limit==='all' ? pagination.totalItems : pagination.limit) + 1
                %>
                ถึง <%= Math.min(pagination.page * (pagination.limit==='all' ? pagination.totalItems :
                    pagination.limit), pagination.totalItems) %>
                    จากทั้งหมด <%= pagination.totalItems %> รายการ
        </div>
        <div class="flex items-center gap-2">
            <span class="text-xs text-slate-500">แสดงต่อหน้า:</span>
            <select onchange="window.location.href='?limit='+this.value+'&q=<%= pagination.search %>'"
                class="text-xs border-slate-200 rounded-lg focus:ring-emerald-500 focus:border-emerald-500 p-1.5">
                <option value="20" <%=pagination.limit==20 ? 'selected' : '' %>>20</option>
                <option value="50" <%=pagination.limit==50 ? 'selected' : '' %>>50</option>
                <option value="100" <%=pagination.limit==100 ? 'selected' : '' %>>100</option>
                <option value="all" <%=pagination.limit=='all' ? 'selected' : '' %>>ทั้งหมด</option>
            </select>
        </div>
    </div>

    <!-- Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% if (warehouses.length===0) { %>
            <div class="col-span-full text-center py-20 bg-white rounded-xl border border-dashed border-slate-300">
                <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-warehouse text-slate-300 text-3xl"></i>
                </div>
                <h3 class="text-lg font-medium text-slate-900">ไม่พบข้อมูลคลังสินค้า</h3>
                <p class="text-slate-500 mt-1">ลองค้นหาด้วยคำอื่น หรือเพิ่มคลังสินค้าใหม่</p>
                <% if(pagination.search) { %>
                    <a href="/fulfillment/warehouses"
                        class="inline-block mt-4 text-emerald-600 hover:underline">ล้างคำค้นหา</a>
                    <% } %>
            </div>
            <% } else { %>
                <% warehouses.forEach(wh=> { %>
                    <div
                        class="bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-all duration-200 p-5 group flex flex-col h-full hover:border-emerald-200">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-10 h-10 bg-emerald-50 rounded-lg flex items-center justify-center text-emerald-600 group-hover:bg-emerald-100 transition-colors">
                                    <i class="fas fa-warehouse"></i>
                                </div>
                                <div>
                                    <h3 class="font-bold text-slate-800 text-lg leading-tight">
                                        <%= wh.name %>
                                    </h3>
                                    <span
                                        class="text-[10px] font-mono font-medium text-slate-500 bg-slate-100 px-1.5 py-0.5 rounded mt-1 inline-block">
                                        <%= wh.code %>
                                    </span>
                                </div>
                            </div>
                            <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                                <form action="/fulfillment/warehouses/delete" method="POST"
                                    onsubmit="return confirm('ยืนยันลบคลังสินค้านี้? ข้อมูล Location ทั้งหมดจะหายไป');">
                                    <input type="hidden" name="id" value="<%= wh.id %>">
                                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                                    <button type="submit"
                                        class="text-slate-400 hover:text-red-500 p-1.5 rounded-full hover:bg-red-50 transition-colors"
                                        title="ลบคลังสินค้า">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="flex-grow">
                            <p class="text-sm text-slate-600 mb-4 flex items-start gap-2 h-10 overflow-hidden">
                                <i class="fas fa-map-marker-alt text-slate-400 mt-0.5 flex-shrink-0"></i>
                                <span class="line-clamp-2">
                                    <%= wh.address || 'ไม่ระบุที่อยู่' %>
                                </span>
                            </p>
                        </div>

                        <div class="flex items-center justify-between pt-4 border-t border-slate-100 mt-auto">
                            <div class="text-xs text-slate-500">
                                Status <span class="text-emerald-600 font-medium ml-1">Active</span>
                            </div>
                            <a href="/fulfillment/warehouses/<%= wh.id %>/locations"
                                class="inline-flex items-center gap-1.5 text-xs font-bold text-emerald-600 hover:text-emerald-700 bg-emerald-50 hover:bg-emerald-100 px-3 py-1.5 rounded-full transition-colors">
                                <span class="group-hover:text-emerald-800">Bins / Shelves</span>
                                <span class="bg-white px-1.5 rounded-md text-emerald-700 shadow-sm">
                                    <%= wh.location_count || 0 %>
                                </span>
                            </a>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>

    <!-- Pagination Footer -->
    <% if (pagination.totalPages> 1) { %>
        <div class="mt-8 flex justify-center">
            <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <a href="?page=<%= Math.max(1, pagination.page - 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                    class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 disabled:opacity-50">
                    <span class="sr-only">Previous</span>
                    <i class="fas fa-chevron-left h-5 w-5"></i>
                </a>

                <% for(let i=1; i <=pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                        class="relative inline-flex items-center px-4 py-2 text-sm font-semibold <%= i === pagination.page ? 'z-10 bg-emerald-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600' : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>">
                        <%= i %>
                    </a>
                    <% } %>

                        <a href="?page=<%= Math.min(pagination.totalPages, pagination.page + 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                            class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                            <span class="sr-only">Next</span>
                            <i class="fas fa-chevron-right h-5 w-5"></i>
                        </a>
            </nav>
        </div>
        <% } %>

</div>

<!-- Add Warehouse Modal (Same as before but ensures proper stacking) -->
<div id="addWarehouseModal" class="fixed inset-0 z-[60] hidden" aria-labelledby="modal-title" role="dialog"
    aria-modal="true">
    <div class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm transition-opacity"
        onclick="toggleModal('addWarehouseModal')"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div
                class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg border border-gray-100">
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div
                            class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-emerald-100 sm:mx-0 sm:h-10 sm:w-10">
                            <i class="fas fa-warehouse text-emerald-600"></i>
                        </div>
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
                            <h3 class="text-lg font-bold leading-6 text-gray-900">เพิ่มคลังสินค้าใหม่</h3>
                            <div class="mt-4 space-y-4">
                                <form id="warehouseForm" action="/fulfillment/warehouses" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700">รหัสคลัง (Code) <span
                                                class="text-red-500">*</span></label>
                                        <input type="text" name="code" placeholder="WH-001"
                                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm p-2.5 border"
                                            required />
                                    </div>
                                    <div class="mt-4">
                                        <label class="block text-sm font-semibold text-gray-700">ชื่อคลังสินค้า <span
                                                class="text-red-500">*</span></label>
                                        <input type="text" name="name" placeholder="คลังสินค้าหลัก"
                                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm p-2.5 border"
                                            required />
                                    </div>
                                    <div class="mt-4">
                                        <label class="block text-sm font-semibold text-gray-700">ที่อยู่ (Postal
                                            Address)</label>
                                        <textarea name="address" rows="3"
                                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm p-2.5 border"
                                            placeholder="ที่อยู่สำหรับจัดส่ง..."></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 border-t border-gray-100">
                    <button type="button" onclick="document.getElementById('warehouseForm').submit()"
                        class="inline-flex w-full justify-center rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 sm:ml-3 sm:w-auto transition-colors">บันทึกข้อมูล</button>
                    <button type="button" onclick="toggleModal('addWarehouseModal')"
                        class="mt-3 inline-flex w-full justify-center rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-colors">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            // Prevent body scroll
            document.body.style.overflow = 'hidden';
        } else {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }
    }
</script>