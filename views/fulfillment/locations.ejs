<div class="px-6 py-6 max-w-[1600px] mx-auto">

    <!-- Header Actions -->
    <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <div class="flex items-center gap-2 mb-1">
                <a href="/fulfillment/warehouses"
                    class="text-slate-500 hover:text-slate-700 inline-flex items-center gap-1 text-sm">
                    <i class="fas fa-arrow-left"></i> คลังสินค้า
                </a>
                <span class="text-slate-300">/</span>
                <span class="text-emerald-600 font-medium text-sm">
                    <%= warehouse.name %>
                </span>
            </div>
            <h1 class="text-2xl font-bold text-slate-800">จุดจัดเก็บสินค้า (Bins/Shelves)</h1>
            <p class="text-slate-500">จัดการตำแหน่งวางสินค้าภายในคลัง <%= warehouse.name %>
            </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
            <!-- Search -->
            <form action="/fulfillment/warehouses/<%= warehouse.id %>/locations" method="GET" class="relative group">
                <input type="text" name="q" placeholder="ค้นหา (ชื่อโซน, ชั้นวาง)..."
                    value="<%= pagination.search || '' %>"
                    class="pl-10 pr-4 py-2 border border-slate-200 rounded-lg text-sm w-full sm:w-64 focus:outline-none focus:ring-2 focus:ring-emerald-500 hover:border-emerald-300 transition-all">
                <i
                    class="fas fa-search absolute left-3 top-2.5 text-slate-400 group-hover:text-emerald-500 transition-colors"></i>
                <% if(pagination.limit !==20) { %>
                    <input type="hidden" name="limit" value="<%= pagination.limit %>">
                    <% } %>
            </form>

            <button onclick="toggleModal('addLocationModal')"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-all shadow-sm active:scale-95">
                <i class="fas fa-plus"></i> เพิ่มจุดจัดเก็บ
            </button>
        </div>
    </div>

    <!-- Controls & Filters -->
    <div class="flex justify-between items-center mb-4">
        <div class="text-sm text-slate-500">
            แสดง <%= (pagination.page - 1) * (pagination.limit==='all' ? pagination.totalItems : pagination.limit) + 1
                %>
                ถึง <%= Math.min(pagination.page * (pagination.limit==='all' ? pagination.totalItems :
                    pagination.limit), pagination.totalItems) %>
                    จากทั้งหมด <%= pagination.totalItems %> รายการ
        </div>
        <div class="flex items-center gap-2">
            <span class="text-xs text-slate-500">แสดงต่อหน้า:</span>
            <select onchange="window.location.href='?limit='+this.value+'&q=<%= pagination.search %>'"
                class="text-xs border-slate-200 rounded-lg focus:ring-emerald-500 focus:border-emerald-500 p-1.5">
                <option value="20" <%=pagination.limit==20 ? 'selected' : '' %>>20</option>
                <option value="50" <%=pagination.limit==50 ? 'selected' : '' %>>50</option>
                <option value="100" <%=pagination.limit==100 ? 'selected' : '' %>>100</option>
                <option value="all" <%=pagination.limit=='all' ? 'selected' : '' %>>ทั้งหมด</option>
            </select>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden mb-6">
        <div class="overflow-x-auto">
            <table class="w-full text-left divide-y divide-gray-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-1/4">ชื่อจุดจัดเก็บ (Code/Name)</th>
                        <th class="px-6 py-4 font-semibold text-slate-700">รายละเอียด / ตำแหน่ง</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-[150px] text-center">สถานะ</th>
                        <th class="px-6 py-4 font-semibold text-slate-700 w-[100px] text-right">จัดการ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                    <% if (locations.length===0) { %>
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-slate-500">
                                <div class="flex flex-col items-center">
                                    <i class="fas fa-boxes text-slate-300 text-4xl mb-3"></i>
                                    <h3 class="font-medium text-slate-900">ยังไม่มีจุดจัดเก็บสินค้า</h3>
                                    <p class="text-sm mt-1">เพิ่ม Shelf, Bin หรือ Zone เพื่อระบุตำแหน่งสินค้า</p>
                                </div>
                            </td>
                        </tr>
                        <% } else { %>
                            <% locations.forEach(loc=> { %>
                                <tr class="hover:bg-slate-50 transition-colors group">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-8 h-8 rounded bg-emerald-50 text-emerald-600 flex items-center justify-center text-xs font-bold border border-emerald-100">
                                                <i class="fas fa-cube"></i>
                                            </div>
                                            <span class="font-bold text-slate-800 font-mono text-sm">
                                                <%= loc.name %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-slate-600">
                                            <%= loc.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center whitespace-nowrap">
                                        <span
                                            class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset <%= loc.status === 'active' ? 'bg-emerald-50 text-emerald-700 ring-emerald-600/20' : 'bg-slate-50 text-slate-600 ring-slate-500/10' %>">
                                            <%= loc.status %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right whitespace-nowrap">
                                        <!-- Add delete or edit logic here later -->
                                        <button class="text-slate-400 hover:text-slate-600 cursor-not-allowed"
                                            title="Coming Soon">
                                            <i class="fas fa-ellipsis-h"></i>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination Footer -->
    <% if (pagination.totalPages> 1) { %>
        <div class="flex justify-center pb-8">
            <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                <a href="?page=<%= Math.max(1, pagination.page - 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                    class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 disabled:opacity-50">
                    <span class="sr-only">Previous</span>
                    <i class="fas fa-chevron-left h-5 w-5"></i>
                </a>

                <% for(let i=1; i <=pagination.totalPages; i++) { %>
                    <a href="?page=<%= i %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                        class="relative inline-flex items-center px-4 py-2 text-sm font-semibold <%= i === pagination.page ? 'z-10 bg-emerald-600 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600' : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0' %>">
                        <%= i %>
                    </a>
                    <% } %>

                        <a href="?page=<%= Math.min(pagination.totalPages, pagination.page + 1) %>&limit=<%= pagination.limit %>&q=<%= pagination.search %>"
                            class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                            <span class="sr-only">Next</span>
                            <i class="fas fa-chevron-right h-5 w-5"></i>
                        </a>
            </nav>
        </div>
        <% } %>
</div>

<!-- Modal -->
<div id="addLocationModal" class="fixed inset-0 z-[60] hidden" aria-labelledby="modal-title" role="dialog"
    aria-modal="true">
    <div class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm transition-opacity"
        onclick="toggleModal('addLocationModal')"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div
                class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg border border-gray-100">
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div
                            class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-emerald-100 sm:mx-0 sm:h-10 sm:w-10">
                            <i class="fas fa-cube text-emerald-600"></i>
                        </div>
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left w-full">
                            <h3 class="text-lg font-bold leading-6 text-gray-900">เพิ่มจุดจัดเก็บสินค้า (Bin/Shelf)</h3>
                            <div class="mt-4 space-y-4">
                                <form id="locationForm" action="/fulfillment/warehouses/<%= warehouse.id %>/locations"
                                    method="POST">
                                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700">ชื่อจุดจัดเก็บ (เช่น
                                            A-01-01) <span class="text-red-500">*</span></label>
                                        <input type="text" name="name" placeholder="Zone-Row-Shelf"
                                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm p-2.5 border"
                                            required />
                                    </div>
                                    <div class="mt-4">
                                        <label class="block text-sm font-semibold text-gray-700">รายละเอียดเพิ่มเติม
                                            (Optional)</label>
                                        <textarea name="description" rows="3"
                                            class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm p-2.5 border"
                                            placeholder="เช่น ชั้นวางใกล้ประตูทางเข้า"></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 border-t border-gray-100">
                    <button type="button" onclick="document.getElementById('locationForm').submit()"
                        class="inline-flex w-full justify-center rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 sm:ml-3 sm:w-auto transition-colors">ยันยัน</button>
                    <button type="button" onclick="toggleModal('addLocationModal')"
                        class="mt-3 inline-flex w-full justify-center rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-colors">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        } else {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }
    }
</script>