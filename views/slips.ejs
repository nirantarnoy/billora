<div class="p-10">
    <!-- Header -->
    <header class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">สลิปการโอนเงิน</h2>
            <p class="text-slate-500 text-sm">จัดการและตรวจสอบหลักฐานการโอนเงินผ่านธนาคาร</p>
        </div>
        <div class="flex flex-wrap items-center gap-4">
            <button onclick="openModal()"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2.5 rounded-xl font-bold transition-all shadow-lg shadow-emerald-600/20 flex items-center gap-2">
                <i class="fas fa-cloud-upload-alt"></i> สแกนเอกสารใหม่
            </button>
            <button onclick="window.location.reload()"
                class="p-2.5 bg-slate-50 text-slate-600 rounded-xl hover:bg-slate-100 transition-all">
                <i class="fas fa-sync-alt"></i>
            </button>
        </div>
    </header>

    <!-- Filters -->
    <div
        class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm mb-6 flex flex-wrap gap-4 items-center justify-between">
        <form action="/slips" method="GET" class="flex flex-wrap gap-4 items-center flex-1">
            <div class="relative flex-1 min-w-[300px]">
                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                <input type="text" name="search" value="<%= search %>"
                    placeholder="ค้นหาชื่อผู้โอน ผู้รับ หรือ รหัสรายการ..."
                    class="w-full pl-12 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-emerald-500 outline-none transition-all">
            </div>

            <div class="flex items-center gap-2 bg-slate-50 border border-slate-200 rounded-xl px-3 py-1">
                <i class="fas fa-calendar-alt text-slate-400"></i>
                <input type="date" name="startDate" value="<%= startDate %>"
                    class="bg-transparent border-none text-sm outline-none focus:ring-0 py-1.5">
                <span class="text-slate-300">-</span>
                <input type="date" name="endDate" value="<%= endDate %>"
                    class="bg-transparent border-none text-sm outline-none focus:ring-0 py-1.5">
                <button type="submit" class="ml-2 text-emerald-600 hover:text-emerald-700">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>

            <div class="flex items-center gap-2">
                <span class="text-sm text-slate-500">แสดงหน้าละ:</span>
                <select name="limit" onchange="this.form.submit()"
                    class="bg-slate-50 border border-slate-200 rounded-xl text-sm px-4 py-2.5 outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="20" <%=limit==='20' ? 'selected' : '' %>>20</option>
                    <option value="50" <%=limit==='50' ? 'selected' : '' %>>50</option>
                    <option value="Limit" <%=limit==='100' ? 'selected' : '' %>>100</option>
                    <option value="all" <%=limit==='all' ? 'selected' : '' %>>ทั้งหมด</option>
                </select>
            </div>
        </form>

        <div class="flex gap-3">
            <button onclick="openExportModal('slips')"
                class="bg-emerald-50 text-emerald-600 px-4 py-2.5 rounded-xl font-semibold hover:bg-emerald-100 transition-all flex items-center gap-2">
                <i class="fas fa-file-excel"></i> ส่งออก Excel
            </button>
            <button onclick="window.location.reload()"
                class="p-2.5 bg-slate-50 text-slate-600 rounded-xl hover:bg-slate-100 transition-all">
                <i class="fas fa-sync-alt"></i>
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-3xl border border-slate-100 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b border-slate-100 bg-slate-50/50">
                        <th class="px-8 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            รหัสรายการ
                        </th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">ผู้โอน
                            (ต้นทาง)</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">ผู้รับ
                            (ปลายทาง)</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            วันเวลาที่โอน</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            จำนวนเงิน</th>
                        <th
                            class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-center">
                            สถานะ</th>
                        <th
                            class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-center">
                            รูปสลิป</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50 font-medium text-slate-700">
                    <% if (slips.length===0) { %>
                        <tr>
                            <td colspan="7" class="text-center py-20 text-slate-400">
                                <i class="fas fa-exchange-alt text-4xl mb-3 block"></i>
                                ไม่พบข้อมูลสลิป
                            </td>
                        </tr>
                        <% } %>
                            <% slips.forEach(slip=> { %>
                                <tr class="hover:bg-slate-50/50 transition-colors">
                                    <td class="px-8 py-5">
                                        <div class="flex items-center gap-2">
                                            <span
                                                class="font-mono text-xs bg-slate-100 px-2 py-1 rounded text-slate-600">
                                                <%= slip.trans_id || 'N/A' %>
                                            </span>
                                            <% if (slip.ai_audit_result) { %>
                                                <span
                                                    class="flex items-center gap-1 px-1.5 py-0.5 bg-indigo-50 text-indigo-500 rounded text-[9px] font-bold border border-indigo-100"
                                                    title="ตรวจสอบโดย AI">
                                                    <i class="fas fa-wand-magic-sparkles"></i> AI
                                                </span>
                                                <% } %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <p class="text-sm font-bold text-slate-800">
                                            <%= slip.sender_name %>
                                        </p>
                                        <p class="text-[10px] text-emerald-600 uppercase font-bold">
                                            <%= slip.sender_bank %>
                                        </p>
                                    </td>
                                    <td class="px-6 py-5">
                                        <p class="text-sm font-bold text-slate-800">
                                            <%= slip.receiver_name %>
                                        </p>
                                        <p class="text-[10px] text-blue-600 uppercase font-bold">
                                            <%= slip.receiver_bank %>
                                        </p>
                                    </td>
                                    <td class="px-6 py-5 text-sm font-normal text-slate-500">
                                        <%= slip.datetime ? new Date(slip.datetime).toLocaleString('th-TH') : '-' %>
                                    </td>
                                    <td class="px-6 py-5 text-right font-bold text-slate-800">
                                        ฿<%= Number(slip.amount).toLocaleString(undefined, {minimumFractionDigits: 2})
                                            %>
                                    </td>
                                    <td class="px-6 py-5 text-center">
                                        <% if (slip.status==='success' ) { %>
                                            <span
                                                class="px-3 py-1 bg-emerald-100 text-emerald-600 text-[10px] rounded-full uppercase font-bold">สำเร็จ</span>
                                            <% } else { %>
                                                <span
                                                    class="px-3 py-1 bg-red-100 text-red-600 text-[10px] rounded-full uppercase font-bold">แจ้งเตือน</span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-5 text-center">
                                        <div class="flex justify-center items-center h-full">
                                            <% if (slip.image_path) { %>
                                                <button
                                                    onclick="viewImage('/<%= slip.image_path.replace(/\\/g, '/') %>')"
                                                    class="text-emerald-600 hover:text-emerald-800 transition-all flex items-center justify-center">
                                                    <i class="fas fa-file-image text-xl"></i>
                                                </button>
                                                <% } else { %>
                                                    <span class="text-slate-300">-</span>
                                                    <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages> 1) { %>
            <div class="p-6 border-t border-slate-50 flex items-center justify-between">
                <p class="text-sm text-slate-500">
                    แสดงรายการที่ <%= ((page-1)*limit) + 1 %> ถึง <%= Math.min(page*limit, total) %>
                            จากทั้งหมด
                            <%= total %> รายการ
                </p>
                <div class="flex gap-2">
                    <a href="/slips?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= search %>"
                        class="px-4 py-2 border border-slate-200 rounded-xl text-sm font-medium hover:bg-emerald-600 hover:text-white transition-all <%= page <= 1 ? 'pointer-events-none opacity-50' : '' %>">
                        <i class="fas fa-chevron-left mr-1"></i> ก่อนหน้า
                    </a>

                    <% for(let i=1; i <=totalPages; i++) { %>
                        <a href="/slips?page=<%= i %>&limit=<%= limit %>&search=<%= search %>"
                            class="w-10 h-10 flex items-center justify-center border border-slate-200 rounded-xl text-sm font-medium transition-all <%= page === i ? 'bg-emerald-600 text-white' : 'hover:bg-emerald-600 hover:text-white' %>">
                            <%= i %>
                        </a>
                        <% } %>

                            <a href="/slips?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= search %>"
                                class="px-4 py-2 border border-slate-200 rounded-xl text-sm font-medium hover:bg-emerald-600 hover:text-white transition-all <%= page >= totalPages ? 'pointer-events-none opacity-50' : '' %>">
                                ถัดไป <i class="fas fa-chevron-right ml-1"></i>
                            </a>
                </div>
            </div>
            <% } else { %>
                <div class="p-6 border-t border-slate-50">
                    <p class="text-sm text-slate-500">แสดงทั้งหมด <%= total %> รายการ</p>
                </div>
                <% } %>
    </div>
</div>

<!-- Image Preview Modal -->
<div id="imageModal" class="hidden fixed inset-0 z-50 bg-slate-900/90 backdrop-blur-sm items-center justify-center p-4">
    <div class="relative max-w-4xl w-full flex flex-col items-center">
        <button onclick="closeImageModal()"
            class="absolute -top-12 right-0 text-white hover:text-emerald-400 text-3xl transition-all">
            <i class="fas fa-times"></i>
        </button>
        <div class="bg-white p-2 rounded-2xl shadow-2xl overflow-hidden max-h-[85vh] inline-block">
            <img id="modalImage" src="" alt="Preview" class="max-h-[80vh] object-contain rounded-xl">
        </div>
        <a id="downloadLink" href="" download
            class="mt-6 flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2.5 rounded-xl font-bold transition-all shadow-lg shadow-emerald-600/30">
            <i class="fas fa-download"></i> ดาวน์โหลดรูปภาพ
        </a>
    </div>
</div>

<!-- Export Modal -->
<div id="exportModal"
    class="fixed inset-0 z-[60] flex items-center justify-center p-4 bg-slate-900/50 backdrop-blur-sm modal modal-hidden">
    <div class="bg-white w-full max-w-md rounded-3xl shadow-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100 flex justify-between items-center">
            <h3 class="text-xl font-bold text-slate-800">เลือกคอลัมน์ที่ต้องการ Export</h3>
            <button onclick="closeExportModal()" class="text-slate-400 hover:text-slate-600">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="p-8">
            <div id="columnSelection" class="space-y-3 mb-8">
                <!-- Columns will be injected here -->
            </div>
            <button onclick="handleExport()"
                class="w-full bg-emerald-600 hover:bg-emerald-700 text-white py-4 rounded-xl font-bold shadow-lg shadow-emerald-600/30 transition-all">
                ดาวน์โหลดไฟล์ Excel
            </button>
        </div>
    </div>
</div>

<script>
    function viewImage(path) {
        const modal = document.getElementById('imageModal');
        const img = document.getElementById('modalImage');
        const downloadLink = document.getElementById('downloadLink');

        img.src = path;
        downloadLink.href = path;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function closeImageModal() {
        const modal = document.getElementById('imageModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = 'auto';
    }

    // Close on clic outside
    document.getElementById('imageModal').onclick = function (e) {
        if (e.target === this) closeImageModal();
    };

    // Close on Escape key
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') closeImageModal();
    });

    // Export Excel Logic
    const exportModal = document.getElementById('exportModal');
    const colSelection = document.getElementById('columnSelection');
    let exportType = 'slips';

    const slipCols = [
        { id: 'trans_id', label: 'รหัสรายการ (Trans ID)' },
        { id: 'sender_name', label: 'ผู้โอน' },
        { id: 'sender_bank', label: 'ธนาคารผู้โอน' },
        { id: 'receiver_name', label: 'ผู้รับ' },
        { id: 'receiver_bank', label: 'ธนาคารผู้รับ' },
        { id: 'amount', label: 'จำนวนเงิน' },
        { id: 'datetime', label: 'วันเวลาที่โอน' }
    ];

    function openExportModal(type) {
        exportType = type;
        const cols = slipCols;
        colSelection.innerHTML = cols.map(c => `
        <label class="flex items-center gap-3 p-3 bg-slate-50 rounded-xl cursor-pointer hover:bg-emerald-50 transition-colors">
            <input type="checkbox" name="export_col" value="${c.id}" checked class="w-5 h-5 rounded text-emerald-600 focus:ring-emerald-500">
            <span class="text-slate-700 font-medium">${c.label}</span>
        </label>
    `).join('');
        exportModal.classList.remove('modal-hidden');
    }

    function closeExportModal() {
        exportModal.classList.add('modal-hidden');
    }

    function handleExport() {
        const selected = Array.from(document.querySelectorAll('input[name="export_col"]:checked')).map(i => i.value);
        if (selected.length === 0) {
            alert('กรุณาเลือกอย่างน้อย 1 คอลัมน์');
            return;
        }
        window.location.href = `/api/export?type=${exportType}&columns=${selected.join(',')}`;
        closeExportModal();
    }
</script>
<script>
    window.SHOULD_RELOAD_ON_UPLOAD = true;
</script>
