<script src="https://cdn.omise.co/omise.js"></script>
<style>
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .active-tab {
        background-color: #059669 !important;
        color: white !important;
        border-color: #059669 !important;
        box-shadow: 0 10px 20px -5px rgba(5, 150, 105, 0.3) !important;
    }

    .active-tab i {
        color: white !important;
    }

    @keyframes fadeInSlide {
        from {
            opacity: 0;
            transform: translateY(12px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-in {
        animation: fadeInSlide 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }
</style>

<script>
    function switchTab(tabId) {
        // Hide all contents
        document.querySelectorAll('.tab-content').forEach(el => {
            el.classList.add('hidden');
            el.classList.remove('animate-in');
        });

        // Show target content
        const target = document.getElementById('tab-' + tabId);
        target.classList.remove('hidden');
        setTimeout(() => target.classList.add('animate-in'), 10);

        // Update buttons
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active-tab');
            btn.classList.add('text-slate-500');
            btn.classList.remove('text-slate-800');
            btn.classList.add('border-transparent');
            btn.classList.remove('border-slate-100');
            // Reset icons
            btn.querySelector('i').classList.add('text-slate-400');
            btn.querySelector('i').classList.remove('text-emerald-500');
        });

        const activeBtn = document.getElementById('tab-' + tabId + '-btn');
        activeBtn.classList.add('active-tab');
        activeBtn.classList.remove('text-slate-500');
        activeBtn.classList.remove('border-transparent');
        activeBtn.querySelector('i').classList.remove('text-slate-400');

        // Update context info colors
        const contextInfo = document.getElementById('context-info');
        if (tabId === 'organization') {
            contextInfo.className = 'bg-gradient-to-br from-teal-500 to-emerald-600 rounded-[2.5rem] p-10 text-white relative overflow-hidden shadow-2xl shadow-emerald-100 transition-all duration-500';
        } else if (tabId === 'subscription') {
            contextInfo.className = 'bg-gradient-to-br from-slate-700 to-slate-800 rounded-[2.5rem] p-10 text-white relative overflow-hidden shadow-2xl shadow-slate-100 transition-all duration-500';
        } else {
            contextInfo.className = 'bg-gradient-to-br from-emerald-500 to-teal-600 rounded-[2.5rem] p-10 text-white relative overflow-hidden shadow-2xl shadow-emerald-100 transition-all duration-500';
        }
    }

    // Modal Control
    const planModal = document.getElementById('planModal');
    function openPlanModal() { planModal.classList.remove('hidden'); }
    function closePlanModal() { planModal.classList.add('hidden'); }

    const passwordModal = document.getElementById('passwordModal');
    function openPasswordModal() { passwordModal.classList.remove('hidden'); }
    function closePasswordModal() { passwordModal.classList.add('hidden'); }

    // Password Change Logic
    document.getElementById('passwordForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);

        if (data.newPassword !== data.confirmPassword) {
            Swal.fire({ title: 'ผิดพลาด', text: 'รหัสผ่านใหม่ไม่ตรงกัน', icon: 'error', confirmButtonColor: '#059669' });
            return;
        }

        try {
            Swal.fire({ title: 'กำลังบันทึก...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            const response = await fetch('/api/change-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': '<%= _csrf %>' },
                body: JSON.stringify({
                    currentPassword: data.currentPassword,
                    newPassword: data.newPassword
                })
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire({ title: 'สำเร็จ', text: 'เปลี่ยนรหัสผ่านเรียบร้อยแล้ว', icon: 'success', confirmButtonColor: '#059669' })
                    .then(() => {
                        closePasswordModal();
                        e.target.reset();
                    });
            } else {
                Swal.fire({ title: 'ผิดพลาด', text: result.message || 'ไม่สามารถเปลี่ยนรหัสผ่านได้', icon: 'error', confirmButtonColor: '#059669' });
            }
        } catch (err) {
            Swal.fire({ title: 'Error', text: 'เกิดข้อผิดพลาดในการเชื่อมต่อ', icon: 'error', confirmButtonColor: '#ef4444' });
        }
    };

    // Init Omise
    Omise.setPublicKey('<%= process.env.OMISE_PUBLIC_KEY %>');

    async function checkoutOmise(planId, amount, planName) {
        if (amount === 0) {
            Swal.fire({ title: 'Free Plan', text: 'กรุณาติดต่อผู้ดูแลระบบเพื่อเปลี่ยนเป็นแผนฟรี', icon: 'info', confirmButtonColor: '#059669' });
            return;
        }

        OmiseCard.configure({
            publicKey: '<%= process.env.OMISE_PUBLIC_KEY %>',
            amount: amount * 100,
            currency: 'THB',
            frameLabel: 'Billora Pro Subscription',
            submitLabel: 'Pay Now',
            buttonLabel: 'Pay with Omise'
        });

        OmiseCard.open({
            amount: amount * 100,
            currency: 'THB',
            defaultPaymentMethod: 'credit_card',
            otherPaymentMethods: ['promptpay'],
            onCreateTokenSuccess: (nonce) => {
                const data = {
                    planId: planId,
                    amount: amount,
                    paymentMethod: nonce.startsWith('tok') ? 'credit_card' : 'promptpay'
                };
                if (nonce.startsWith('tok')) data.token = nonce;
                else data.source = nonce;
                processPayment(data);
            }
        });
    }

    async function processPayment(data) {
        try {
            Swal.fire({ title: 'Processing...', text: 'กำลังจัดเตรียมการชำระเงิน', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            const response = await fetch('/api/payments/checkout', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': '<%= _csrf %>' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (result.success) {
                if (result.authorize_uri) {
                    window.location.href = result.authorize_uri;
                } else if (result.qr_code_url) {
                    Swal.fire({
                        title: 'Scan to Pay',
                        text: 'สแกน QR เพื่อชำระเงินตามยอดที่ระบุ',
                        imageUrl: result.qr_code_url,
                        imageWidth: 300, imageHeight: 300,
                        confirmButtonText: 'ชำระเงินเสร็จแล้ว',
                        confirmButtonColor: '#059669',
                        showCancelButton: true,
                        cancelButtonText: 'ปิดหน้าจอ',
                        footer: '<p class="text-sm text-slate-400 italic">หลังจากชำระแล้ว กรุณากดปุ่มเพื่ออัปเดตระบบ</p>'
                    }).then((res) => {
                        if (res.isConfirmed) {
                            verifyPayment(result.chargeId);
                        } else {
                            window.location.reload();
                        }
                    });
                } else {
                    Swal.fire({ title: 'Success', text: 'ชำระเงินเรียบร้อย แผนใหม่เริ่มใช้งานได้ทันที', icon: 'success', confirmButtonColor: '#059669' })
                        .then(() => window.location.reload());
                }
            } else {
                Swal.fire({ title: 'Error', text: result.message || 'การชำระเงินขัดข้อง', icon: 'error', confirmButtonColor: '#059669' });
            }
        } catch (err) {
            Swal.fire({ title: 'Error', text: 'ไม่สามารถติดต่อเซิร์ฟเวอร์ได้', icon: 'error', confirmButtonColor: '#ef4444' });
        }
    }

    async function verifyPayment(chargeId) {
        try {
            Swal.fire({ title: 'Verifying...', text: 'กำลังตรวจสอบสถานะการชำระเงิน', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            const response = await fetch(`/api/payments/sync/${chargeId}`);
            const result = await response.json();

            if (result.success) {
                Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
            } else {
                Swal.fire({
                    title: 'ยังไม่พบยอดเงิน',
                    text: result.message,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'ลองอีกครั้ง',
                    cancelButtonText: 'ไว้ตรวจสอบภายหลัง'
                }).then((res) => {
                    if (res.isConfirmed) verifyPayment(chargeId);
                    else window.location.reload();
                });
            }
        } catch (err) {
            Swal.fire('Error', 'เกิดข้อผิดพลาดในการตรวจสอบสถานะ', 'error');
        }
    }

    // Tenant Update Logic
    document.getElementById('tenantForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);

        try {
            const response = await fetch('/tenant/settings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': '<%= _csrf %>' },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                Swal.fire({ title: 'สำเร็จ', text: 'บันทึกข้อมูลองค์กรเรียบร้อยแล้ว', icon: 'success', confirmButtonColor: '#059669' });
            } else {
                const err = await response.json();
                Swal.fire({ title: 'ผิดพลาด', text: err.message || 'ไม่สามารถบันทึกข้อมูลได้', icon: 'error', confirmButtonColor: '#059669' });
            }
        } catch (err) {
            Swal.fire({ title: 'Error', text: 'เกิดข้อผิดพลาดในการเชื่อมต่อ', icon: 'error', confirmButtonColor: '#ef4444' });
        }
    };

    // Slip Settings Logic
    document.getElementById('slipSettingsForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);

        const settings = {
            slip_verify: {
                enabled: document.getElementById('slip_enabled').checked,
                target_name: formData.get('target_name'),
                target_account: formData.get('target_account')
            }
        };

        try {
            Swal.fire({ title: 'กำลังบันทึก...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            const response = await fetch('/tenant/settings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': '<%= _csrf %>' },
                body: JSON.stringify({ settings }) // This will be merged by the backend
            });

            if (response.ok) {
                Swal.fire({ title: 'สำเร็จ!', text: 'อัปเดตการตั้งค่าการตรวจสอบสลิปแล้ว', icon: 'success', confirmButtonColor: '#059669' });
            } else {
                const err = await response.json();
                Swal.fire({ title: 'ผิดพลาด', text: err.message || 'ไม่สามารถบันทึกข้อมูลได้', icon: 'error', confirmButtonColor: '#059669' });
            }
        } catch (err) {
            Swal.fire({ title: 'Error', text: 'เกิดข้อผิดพลาดในการเชื่อมต่อ', icon: 'error', confirmButtonColor: '#ef4444' });
        }
    };
</script>