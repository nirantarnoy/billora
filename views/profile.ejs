<div class="p-10 max-w-6xl mx-auto">
    <!-- Header with soft blur effect -->
    <header class="mb-12 relative">
        <div class="absolute -top-10 -left-10 w-32 h-32 bg-indigo-100/50 rounded-full blur-3xl"></div>
        <div class="relative z-10">
            <h2 class="text-4xl font-black text-slate-800 tracking-tight">โปรไฟล์ของฉัน</h2>
            <p class="text-slate-500 mt-2 font-medium">จัดการข้อมูลส่วนตัวและตรวจสอบสถานะแพ็กเกจของคุณ</p>
        </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
        <!-- Left Column: User Profile Card -->
        <div class="lg:col-span-4 space-y-8">
            <div
                class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] border border-white shadow-[0_20px_50px_rgba(0,0,0,0.04)] overflow-hidden p-10 text-center relative group">
                <div
                    class="absolute inset-0 bg-gradient-to-b from-indigo-50/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                </div>
                <div class="relative z-10">
                    <div
                        class="w-28 h-28 rounded-[2rem] bg-gradient-to-tr from-indigo-500 to-purple-400 mx-auto flex items-center justify-center text-white text-4xl font-bold shadow-2xl shadow-indigo-500/20 mb-8 transform group-hover:scale-105 transition-transform duration-500">
                        <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                    <h3 class="text-2xl font-black text-slate-800 mb-2 tracking-tight">
                        <%= user.username %>
                    </h3>
                    <div
                        class="inline-flex items-center px-4 py-1.5 bg-slate-100 text-slate-600 rounded-full text-[10px] font-black uppercase tracking-widest mb-8">
                        <%= user.role==='admin' ? 'Administrator' : (user.role==='owner' ? 'Owner' : 'Member' ) %>
                    </div>

                    <div class="flex flex-col gap-3">
                        <button
                            class="w-full py-4 bg-white hover:bg-slate-50 text-slate-700 rounded-2xl font-bold transition-all text-sm border border-slate-100 shadow-sm flex items-center justify-center gap-2">
                            <i class="fas fa-edit text-indigo-500"></i> แก้ไขโปรไฟล์
                        </button>
                        <button
                            class="w-full py-4 bg-indigo-50 hover:bg-indigo-100 text-indigo-600 rounded-2xl font-bold transition-all text-sm flex items-center justify-center gap-2">
                            <i class="fas fa-key"></i> เปลี่ยนรหัสผ่าน
                        </button>
                    </div>
                </div>
            </div>

            <!-- Company Info Card -->
            <div
                class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] border border-white shadow-[0_20px_50px_rgba(0,0,0,0.04)] p-10 relative overflow-hidden group">
                <div
                    class="absolute top-0 right-0 p-6 opacity-10 group-hover:scale-110 transition-transform duration-500">
                    <i class="fas fa-building text-6xl text-indigo-500"></i>
                </div>
                <div class="relative z-10">
                    <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">ข้อมูลองค์กร</h4>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-store text-slate-400 text-sm"></i>
                            </div>
                            <div>
                                <p class="text-[10px] font-bold text-slate-400 uppercase mb-0.5">บริษัท/ร้านค้า</p>
                                <p class="font-bold text-slate-800 leading-tight">
                                    <%= tenant ? tenant.name : 'N/A' %>
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-fingerprint text-slate-400 text-sm"></i>
                            </div>
                            <div>
                                <p class="text-[10px] font-bold text-slate-400 uppercase mb-0.5">Tenant ID</p>
                                <code
                                    class="text-[11px] font-bold text-indigo-600 bg-indigo-50/50 px-3 py-1.5 rounded-lg border border-indigo-100/50 block mt-1 tracking-wider"><%= tenant ? tenant.tenant_id : 'N/A' %></code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Subscription & Stats -->
        <div class="lg:col-span-8 space-y-10">
            <!-- Modernized Current Plan Card (Light Theme) -->
            <div
                class="bg-white rounded-[3rem] p-1 border border-slate-100 shadow-[0_30px_60px_rgba(0,0,0,0.05)] relative overflow-hidden group">
                <!-- Soft Glow Effects -->
                <div
                    class="absolute -top-24 -right-24 w-80 h-80 bg-indigo-100/60 rounded-full blur-[100px] animate-pulse">
                </div>
                <div class="absolute -bottom-24 -left-24 w-80 h-80 bg-emerald-100/40 rounded-full blur-[100px]"></div>

                <div class="relative z-10 p-10">
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8 mb-12">
                        <div>
                            <div class="flex items-center gap-3 mb-4">
                                <span
                                    class="px-4 py-1.5 bg-emerald-50 text-emerald-600 rounded-full text-[10px] font-black uppercase tracking-widest border border-emerald-100 flex items-center gap-2">
                                    <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full animate-ping"></span>
                                    Active Now
                                </span>
                                <% if (subscription && subscription.end_date) { %>
                                    <span class="text-slate-400 text-xs font-medium">
                                        Exp: <%= new Date(subscription.end_date).toLocaleDateString('th-TH', {
                                            day: 'numeric' , month: 'long' , year: 'numeric' }) %>
                                    </span>
                                    <% } %>
                            </div>
                            <h2 class="text-5xl font-black text-slate-800 tracking-tighter mb-2">
                                <%= subscription ? subscription.plan_name : 'Free Tier' %>
                            </h2>
                            <p class="text-slate-500 font-medium">สัมผัสประสบการณ์การจัดการเอกสารด้วย AI อย่างเต็มรูปแบบ
                            </p>
                        </div>
                        <div
                            class="bg-slate-50/50 p-6 rounded-[2rem] border border-slate-100/50 text-center md:text-right flex flex-col items-center md:items-end min-w-[200px]">
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Monthly
                                Billing
                            </p>
                            <div class="flex items-baseline gap-1">
                                <span class="text-xs font-bold text-slate-400">฿</span>
                                <span class="text-2xl font-black text-slate-800 tracking-tight">
                                    <%= Number(subscription ? subscription.price_monthly : 0).toLocaleString() %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-end">
                        <% let features={}; try { features=typeof subscription?.features==='string' ?
                            JSON.parse(subscription.features) : (subscription?.features || {}); } catch(e) {} %>

                            <div class="space-y-6">
                                <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">Package
                                    Privileges</h4>
                                <div class="grid grid-cols-1 gap-4">
                                    <div class="flex items-center gap-4 group/item">
                                        <div
                                            class="w-10 h-10 rounded-xl bg-emerald-50 flex items-center justify-center text-emerald-500 group-hover/item:scale-110 transition-transform">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <span class="text-sm font-bold text-slate-700">OCR Engine Pro 2026</span>
                                    </div>
                                    <div class="flex items-center gap-4 group/item">
                                        <div
                                            class="w-10 h-10 rounded-xl <%= features.ai_audit ? 'bg-indigo-50 text-indigo-500' : 'bg-slate-50 text-slate-300' %> flex items-center justify-center group-hover/item:scale-110 transition-transform">
                                            <i
                                                class="fas <%= features.ai_audit ? 'fa-sparkles' : 'fa-times-circle' %>"></i>
                                        </div>
                                        <span
                                            class="text-sm font-bold <%= features.ai_audit ? 'text-slate-700' : 'text-slate-400 font-medium whitespace-pre-wrap' %>">Gemini
                                            AI Audit & Anti-Forgery</span>
                                    </div>
                                    <div class="flex items-center gap-4 group/item">
                                        <div
                                            class="w-10 h-10 rounded-xl <%= features.multichannel ? 'bg-blue-50 text-blue-500' : 'bg-slate-50 text-slate-300' %> flex items-center justify-center group-hover/item:scale-110 transition-transform">
                                            <i
                                                class="fas <%= features.multichannel ? 'fa-bolt' : 'fa-times-circle' %>"></i>
                                        </div>
                                        <span
                                            class="text-sm font-bold <%= features.multichannel ? 'text-slate-700' : 'text-slate-400 font-medium whitespace-pre-wrap' %>">Multi-Channel
                                            Data Integration</span>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-4">
                                <% if ((user.role==='admin' || user.role==='owner' ) && plans && plans.length> 0) { %>
                                    <div class="bg-indigo-50/50 p-6 rounded-[1.5rem] border border-indigo-100/50 mb-4">
                                        <p
                                            class="text-[10px] font-black text-indigo-400 uppercase tracking-widest mb-3">
                                            Quick Change (Admin Only)</p>
                                        <select id="planSelector"
                                            class="w-full py-3 bg-white border border-indigo-100 rounded-xl text-sm font-bold text-slate-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                                            <% plans.forEach(p=> { %>
                                                <option value="<%= p.id %>" <%=subscription &&
                                                    subscription.plan_id===p.id ? 'selected' : '' %>>
                                                    <%= p.plan_name %> - ฿<%= Number(p.price_monthly).toLocaleString()
                                                            %>/mo
                                                </option>
                                                <% }) %>
                                        </select>
                                        <button onclick="changePlan()"
                                            class="w-full mt-3 py-3 bg-indigo-600 text-white rounded-xl font-bold text-sm shadow-lg shadow-indigo-600/20 hover:bg-indigo-700 transition-all">
                                            ยืนยันการเปลี่ยนแพ็กเกจ
                                        </button>
                                    </div>
                                    <% } %>
                            </div>
                    </div>
                </div>
            </div>

            <script>
                async function changePlan() {
                    const planId = document.getElementById('planSelector').value;
                    const planName = document.getElementById('planSelector').options[document.getElementById('planSelector').selectedIndex].text;

                    const result = await Swal.fire({
                        title: 'ยืนยันการเปลี่ยนแพ็กเกจ?',
                        text: `คุณกำลังจะเปลี่ยนเป็นแพ็กเกจ: ${planName}`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#4f46e5',
                        cancelButtonColor: '#ef4444',
                        confirmButtonText: 'ยืนยัน',
                        cancelButtonText: 'ยกเลิก'
                    });

                    if (result.isConfirmed) {
                        try {
                            const response = await fetch('/tenant/change-plan', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'x-csrf-token': '<%= _csrf %>'
                                },
                                body: JSON.stringify({ planId })
                            });

                            const data = await response.json();
                            if (data.success) {
                                Swal.fire('สำเร็จ!', data.message, 'success').then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('ผิดพลาด', data.message, 'error');
                            }
                        } catch (error) {
                            Swal.fire('ผิดพลาด', 'ไม่สามารถเปลี่ยนแพ็กเกจได้: ' + error.message, 'error');
                        }
                    }
                }
            </script>
            <!-- Modern Statistics Section -->
            <div
                class="bg-white/60 backdrop-blur-xl rounded-[2.5rem] border border-slate-50 shadow-[0_20px_50px_rgba(0,0,0,0.03)] p-12 relative overflow-hidden">
                <div class="flex flex-col md:flex-row justify-between items-center gap-4 mb-10">
                    <h3 class="text-2xl font-black text-slate-800 tracking-tight">System Utilization</h3>
                    <div
                        class="px-4 py-2 bg-slate-50 rounded-xl text-[10px] font-bold text-slate-500 uppercase tracking-widest border border-slate-100">
                        Real-time Stats
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
                    <div class="group">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.15em] mb-4">OCR Processing
                        </p>
                        <div class="space-y-2">
                            <p
                                class="text-4xl font-black text-slate-800 tracking-tighter group-hover:text-indigo-600 transition-colors">
                                Unlimited</p>
                            <div class="w-full h-1.5 bg-slate-100 rounded-full overflow-hidden">
                                <div class="w-[85%] h-full bg-indigo-500 rounded-full"></div>
                            </div>
                        </div>
                    </div>
                    <div class="group">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.15em] mb-4">AI Validations
                        </p>
                        <div class="space-y-2">
                            <p
                                class="text-4xl font-black text-slate-800 tracking-tighter group-hover:text-emerald-500 transition-colors">
                                Enabled</p>
                            <div class="w-full h-1.5 bg-slate-100 rounded-full overflow-hidden">
                                <div class="w-full h-full bg-emerald-500 rounded-full"></div>
                            </div>
                        </div>
                    </div>
                    <div class="group">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.15em] mb-4">Cloud Syncing
                        </p>
                        <div class="space-y-2">
                            <p
                                class="text-4xl font-black text-slate-800 tracking-tighter group-hover:text-blue-500 transition-colors">
                                Active</p>
                            <div class="w-full h-1.5 bg-slate-100 rounded-full overflow-hidden">
                                <div class="w-[92%] h-full bg-blue-500 rounded-full"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>