<div class="p-10">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-10">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">คลังสินค้า (Inventory)</h2>
            <p class="text-slate-500 mt-1">จัดการรายการสินค้าและจำนวนสต็อกคงเหลือ</p>
        </div>
        <button onclick="openAddProductModal()"
            class="w-full md:w-auto bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg shadow-emerald-600/20 transition-all flex items-center justify-center gap-2">
            <i class="fas fa-plus"></i> เพิ่มสินค้าใหม่
        </button>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-[32px] shadow-sm border border-slate-100 flex items-center gap-4">
            <div
                class="w-14 h-14 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-xl shadow-sm">
                <i class="fas fa-box"></i>
            </div>
            <div>
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">สินค้าทั้งหมด</p>
                <p class="text-2xl font-bold text-slate-800">
                    <%= products.length %> SKU
                </p>
            </div>
        </div>
        <div class="bg-white p-6 rounded-[32px] shadow-sm border border-slate-100 flex items-center gap-4">
            <div
                class="w-14 h-14 bg-amber-50 text-amber-600 rounded-2xl flex items-center justify-center text-xl shadow-sm">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div>
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">สินค้าสต็อกต่ำ</p>
                <p class="text-2xl font-bold text-slate-800">
                    <%= products.filter(p=> p.quantity < 5).length %>
                </p>
            </div>
        </div>
        <div class="bg-white p-6 rounded-[32px] shadow-sm border border-slate-100 flex items-center gap-4">
            <div
                class="w-14 h-14 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center text-xl shadow-sm">
                <i class="fas fa-wallet"></i>
            </div>
            <div>
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">มูลค่าสต็อกรวม</p>
                <p class="text-2xl font-bold text-slate-800">฿<%= products.reduce((acc, p)=> acc + (p.cost *
                        p.quantity), 0).toLocaleString() %></p>
            </div>
        </div>
    </div>

    <!-- Product Table -->
    <div class="bg-white rounded-[32px] shadow-sm border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50 border-b border-slate-100">
                    <tr>
                        <th class="px-8 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            สินค้า</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            SKU</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            ราคา (ขาย/ต้นทุน)</th>
                        <th class="px-6 py-4 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            คงเหลือ</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            จัดการ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    <% if (products.length===0) { %>
                        <tr>
                            <td colspan="5" class="px-8 py-24 text-center text-slate-400">
                                <i class="fas fa-boxes text-4xl mb-3 block"></i>
                                ยังไม่มีสินค้าในระบบ
                            </td>
                        </tr>
                        <% } else { %>
                            <% products.forEach(product=> { %>
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="px-8 py-5">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-10 h-10 bg-white border border-slate-100 rounded-xl flex items-center justify-center text-slate-400 overflow-hidden shadow-sm">
                                                <% if (product.image_url) { %>
                                                    <img src="<%= product.image_url %>"
                                                        class="w-full h-full object-cover">
                                                    <% } else { %>
                                                        <i class="fas fa-image"></i>
                                                        <% } %>
                                            </div>
                                            <span class="font-bold text-slate-700">
                                                <%= product.name %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm font-mono text-slate-500 font-medium">
                                        <%= product.sku %>
                                    </td>
                                    <td class="px-6 py-4 text-sm">
                                        <p class="text-slate-800 font-bold">฿<%= product.price.toLocaleString() %>
                                        </p>
                                        <p class="text-slate-400 text-xs line-through font-medium">
                                            ฿<%= product.cost.toLocaleString() %>
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span
                                            class="px-3 py-1 rounded-full text-[10px] font-bold uppercase <%= product.quantity < 5 ? 'bg-rose-100 text-rose-600' : 'bg-emerald-100 text-emerald-600' %>">
                                            <%= product.quantity %> หน่วย
                                        </span>
                                    </td>
                                    <td class="px-8 py-5 text-right">
                                        <button class="p-2 text-slate-300 hover:text-emerald-600 transition-colors">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>