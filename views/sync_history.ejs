<div class="p-10 space-y-10">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">ประวัติการซิงค์ข้อมูล</h2>
            <p class="text-slate-500 mt-1">ประวัติการอัปเดตข้อมูลอัตโนมัติจากแพลตฟอร์มรายใหญ่</p>
        </div>
        <div class="flex items-center gap-3">
            <button onclick="window.location.reload()"
                class="flex items-center gap-2 px-6 py-3 bg-white border border-slate-200 text-slate-700 rounded-2xl font-semibold hover:bg-slate-50 transition-all shadow-sm">
                <i class="fas fa-sync-alt"></i> รีเฟรช
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-check-circle text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">ซิงค์สำเร็จวันนี้</p>
                    <p class="text-2xl font-bold text-slate-800">
                        <%= (logs || []).filter(l=> l.status === 'success' && new Date(l.created_at).toDateString() ===
                            new Date().toDateString()).length %>
                    </p>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-shopping-cart text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">จำนวนออเดอร์สะสม</p>
                    <p class="text-2xl font-bold text-slate-800">
                        <%= (logs || []).reduce((acc, l)=> acc + (l.total_records || 0), 0).toLocaleString() %>
                    </p>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-orange-50 text-orange-600 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-clock text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">ซิงค์ล่าสุด</p>
                    <p class="text-lg font-bold text-slate-800">
                        <%= logs && logs.length> 0 ? new Date(logs[0].created_at).toLocaleTimeString('th-TH') : '-' %>
                    </p>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-100">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-red-50 text-red-600 rounded-2xl flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500">พบปัญหา</p>
                    <p class="text-2xl font-bold text-slate-800">
                        <%= (logs || []).filter(l=> l.status === 'failed').length %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 overflow-hidden">
        <div class="p-6 border-b border-slate-100 flex items-center justify-between">
            <h3 class="font-bold text-slate-800">รายการบันทึกการเชื่อมต่อ</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-slate-50 text-slate-500 text-xs uppercase tracking-wider">
                        <th class="px-6 py-4 font-semibold">วันเวลา</th>
                        <th class="px-6 py-4 font-semibold">แพลตฟอร์ม</th>
                        <th class="px-6 py-4 font-semibold">ประเภทงาน</th>
                        <th class="px-6 py-4 font-semibold text-center">จำนวนข้อมูล</th>
                        <th class="px-6 py-4 font-semibold">สถานะ</th>
                        <th class="px-6 py-4 font-semibold text-right">รายละเอียด</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% if (logs && logs.length> 0) { %>
                        <% logs.forEach(log=> { %>
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-slate-800">
                                        <%= new Date(log.created_at).toLocaleDateString('th-TH') %>
                                    </div>
                                    <div class="text-[11px] text-slate-400">
                                        <%= new Date(log.created_at).toLocaleTimeString('th-TH') %>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <% if(log.platform==='Shopee' ) { %>
                                            <div
                                                class="w-8 h-8 rounded-lg bg-orange-100 text-orange-600 flex items-center justify-center">
                                                <i class="fas fa-shopping-bag text-sm"></i>
                                            </div>
                                            <span class="text-sm font-medium text-slate-700">Shopee</span>
                                            <% } else if(log.platform==='Tiktok' ) { %>
                                                <div
                                                    class="w-8 h-8 rounded-lg bg-slate-900 text-white flex items-center justify-center">
                                                    <i class="fab fa-tiktok text-sm"></i>
                                                </div>
                                                <span class="text-sm font-medium text-slate-700">TikTok</span>
                                                <% } else { %>
                                                    <div
                                                        class="w-8 h-8 rounded-lg bg-slate-100 text-slate-600 flex items-center justify-center">
                                                        <i class="fas fa-globe text-sm"></i>
                                                    </div>
                                                    <span class="text-sm font-medium text-slate-700">
                                                        <%= log.platform %>
                                                    </span>
                                                    <% } %>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-slate-600">
                                        <%= log.type==='order' ? 'ซิงค์รายการสั่งซื้อ' : (log.type==='income'
                                            ? 'ซิงค์ข้อมูลรายได้' : log.type) %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="text-sm font-bold text-slate-700">
                                        <%= log.total_records %>
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <% if(log.status==='success' ) { %>
                                        <span
                                            class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-700">
                                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span> สำเร็จ
                                        </span>
                                        <% } else { %>
                                            <span
                                                class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-700">
                                                <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span> ล้มเหลว
                                            </span>
                                            <% } %>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="text-xs text-slate-500 max-w-[200px] truncate ml-auto">
                                        <%= log.message || '-' %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="px-6 py-12 text-center">
                                            <div class="flex flex-col items-center">
                                                <div
                                                    class="w-16 h-16 bg-slate-50 text-slate-200 rounded-full flex items-center justify-center mb-4">
                                                    <i class="fas fa-history text-3xl"></i>
                                                </div>
                                                <p class="text-slate-400">ยังไม่มีประวัติการซิงค์ข้อมูล</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <% if (logs && logs.length> 0) { %>
            <div class="p-6 border-t border-slate-100 bg-slate-50/50">
                <p class="text-xs text-slate-400 text-center uppercase tracking-widest font-bold">แสดง 50 รายการล่าสุด
                </p>
            </div>
            <% } %>
    </div>
</div>