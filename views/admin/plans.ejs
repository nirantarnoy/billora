<div class="px-6 py-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">จัดการระบบ</h2>
            <p class="text-slate-500 mt-1">จัดการแพ็กเกจ (Packages) และโมดูล (Modules) ของระบบทั้งหมด</p>
        </div>
    </div>

    <!-- Tabs Container -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
        <!-- Tabs Header -->
        <div class="flex border-b border-slate-100 bg-slate-50/50">
            <button onclick="switchTab('packages')" id="tab-packages"
                class="px-8 py-4 text-sm font-bold transition-all border-b-2 active-tab">
                <i class="fas fa-box-open mr-2"></i> แพ็กเกจ (Packages)
            </button>
            <button onclick="switchTab('modules')" id="tab-modules"
                class="px-8 py-4 text-sm font-bold text-slate-400 hover:text-slate-600 transition-all border-b-2 border-transparent">
                <i class="fas fa-cubes mr-2"></i> โมดูล (Modules)
            </button>
        </div>

        <!-- Tab Content: Packages -->
        <div id="content-packages" class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-slate-800">รายการแพ็กเกจ</h3>
                <button onclick="openPlanModal()"
                    class="px-4 py-2 bg-emerald-600 text-white rounded-xl hover:bg-emerald-700 transition-all flex items-center gap-2">
                    <i class="fas fa-plus"></i> เพิ่มแพ็กเกจ
                </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <% plans.forEach(plan=> { %>
                    <div
                        class="border border-slate-200 rounded-2xl p-6 hover:shadow-md transition-all relative group bg-white">
                        <div
                            class="absolute top-4 right-4 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button onclick='openPlanModal(<%- JSON.stringify(plan) %>)'
                                class="p-2 text-blue-500 hover:bg-blue-50 rounded-lg">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button onclick='deletePlan(<%= plan.id %>, "<%= plan.plan_name %>")'
                                class="p-2 text-red-500 hover:bg-red-50 rounded-lg">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>

                        <div class="mb-4">
                            <span
                                class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-[10px] font-bold uppercase tracking-wider">
                                Code: <%= plan.plan_code %>
                            </span>
                        </div>

                        <h4 class="text-xl font-bold text-slate-800 mb-2">
                            <%= plan.plan_name %>
                        </h4>
                        <p class="text-slate-500 text-sm mb-4 h-12 overflow-hidden line-clamp-2">
                            <%= plan.description || 'ไม่มีคำอธิบาย' %>
                        </p>

                        <div class="text-3xl font-bold text-emerald-600 mb-6">
                            <%= plan.price_monthly.toLocaleString() %> <span
                                    class="text-sm font-normal text-slate-400">THB/เดือน</span>
                        </div>

                        <div class="space-y-3 mb-6">
                            <div class="flex items-center gap-2 text-sm text-slate-600">
                                <i class="fas fa-users w-5 text-slate-400"></i>
                                <span>Max Users: <b>
                                        <%= plan.max_users %>
                                    </b></span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-slate-600">
                                <i class="fas fa-exchange-alt w-5 text-slate-400"></i>
                                <span>Max Trans/mo: <b>
                                        <%= plan.max_transactions_per_month.toLocaleString() %>
                                    </b></span>
                            </div>
                        </div>

                        <div class="pt-4 border-t border-slate-100">
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-3">Active
                                Features</p>
                            <div class="flex flex-wrap gap-2">
                                <% let features={}; try { features=typeof plan.features==='string' ?
                                    JSON.parse(plan.features) : (plan.features || {}); } catch(e) {}
                                    Object.keys(features).forEach(key=> {
                                    if (features[key]) {
                                    %>
                                    <span
                                        class="px-2 py-1 bg-emerald-50 text-emerald-700 rounded-md text-[10px] font-medium border border-emerald-100">
                                        <%= key %>
                                    </span>
                                    <% } }); %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <!-- Tab Content: Modules -->
        <div id="content-modules" class="p-6 hidden">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-slate-800">รายการโมดูลในระบบ</h3>
                <button onclick="openModuleModal()"
                    class="px-4 py-2 bg-emerald-600 text-white rounded-xl hover:bg-emerald-700 transition-all flex items-center gap-2">
                    <i class="fas fa-plus"></i> เพิ่มโมดูล
                </button>
            </div>

            <div class="bg-white rounded-xl border border-slate-100 overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-slate-50 text-slate-400 text-xs font-bold uppercase tracking-widest">
                        <tr>
                            <th class="px-6 py-4">โมดูล</th>
                            <th class="px-6 py-4">Code</th>
                            <th class="px-6 py-4">สถานะ</th>
                            <th class="px-6 py-4 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        <% modules.forEach(mod=> { %>
                            <tr class="hover:bg-slate-50/50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div
                                            class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center text-slate-600">
                                            <i class="<%= mod.icon || 'fas fa-cube' %>"></i>
                                        </div>
                                        <div>
                                            <div class="font-bold text-slate-800">
                                                <%= mod.module_name %>
                                            </div>
                                            <div class="text-xs text-slate-400">
                                                <%= mod.description %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <code
                                        class="px-2 py-1 bg-slate-100 rounded text-xs text-slate-600"><%= mod.module_code %></code>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (mod.is_active) { %>
                                        <span
                                            class="px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-[10px] font-bold uppercase">Active</span>
                                        <% } else { %>
                                            <span
                                                class="px-3 py-1 bg-slate-100 text-slate-400 rounded-full text-[10px] font-bold uppercase">Inactive</span>
                                            <% } %>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button onclick='openModuleModal(<%- JSON.stringify(mod) %>)'
                                        class="p-2 text-slate-400 hover:text-emerald-600 transition-all">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick='deleteModule(<%= mod.id %>, "<%= mod.module_name %>")'
                                        class="p-2 text-slate-400 hover:text-red-600 transition-all">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Plan Modal Template -->
