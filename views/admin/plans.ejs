<style>
    .active-tab {
        border-bottom-color: #10b981;
        color: #059669;
        background-color: white;
    }

    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
</style>

<script>
    function switchTab(tab) {
        // Toggle Buttons
        document.getElementById('tab-packages').classList.remove('active-tab', 'text-emerald-600', 'border-emerald-500');
        document.getElementById('tab-modules').classList.remove('active-tab', 'text-emerald-600', 'border-emerald-500');
        document.getElementById('tab-packages').classList.add('text-slate-400', 'border-transparent');
        document.getElementById('tab-modules').classList.add('text-slate-400', 'border-transparent');

        document.getElementById(`tab-${tab}`).classList.add('active-tab');
        document.getElementById(`tab-${tab}`).classList.remove('text-slate-400', 'border-transparent');

        // Toggle Content
        document.getElementById('content-packages').classList.add('hidden');
        document.getElementById('content-modules').classList.add('hidden');
        document.getElementById(`content-${tab}`).classList.remove('hidden');
    }

    async function openPlanModal(plan = null) {
        const template = document.getElementById('planModalTemplate');

        const { value: formValues } = await Swal.fire({
            title: plan ? `แก้ไขแพ็กเกจ: ${plan.plan_name}` : 'เพิ่มแพ็กเกจใหม่',
            html: template.innerHTML,
            focusConfirm: false,
            width: '600px',
            showCancelButton: true,
            confirmButtonText: 'บันทึก',
            cancelButtonText: 'ยกเลิก',
            didOpen: () => {
                if (plan) {
                    document.getElementById('planId').value = plan.id;
                    document.getElementById('planCode').value = plan.plan_code;
                    document.getElementById('planName').value = plan.plan_name;
                    document.getElementById('planDesc').value = plan.description;
                    document.getElementById('planPriceMonthly').value = plan.price_monthly;
                    document.getElementById('planPriceYearly').value = plan.price_yearly;
                    document.getElementById('planMaxUsers').value = plan.max_users;
                    document.getElementById('planMaxStorage').value = plan.max_storage_mb;
                    document.getElementById('planMaxTrans').value = plan.max_transactions_per_month;
                    document.getElementById('planSort').value = plan.sort_order;
                    document.getElementById('planIsActive').checked = !!plan.is_active;

                    // Set checkboxes
                    let features = {};
                    try { features = typeof plan.features === 'string' ? JSON.parse(plan.features) : (plan.features || {}); } catch (e) { }
                    const checkboxes = document.querySelectorAll('.feature-checkbox');
                    checkboxes.forEach(cb => {
                        if (features[cb.value]) cb.checked = true;
                    });
                }
            },
            preConfirm: () => {
                const features = {};
                document.querySelectorAll('.feature-checkbox').forEach(cb => {
                    features[cb.value] = cb.checked;
                });

                return {
                    id: document.getElementById('planId').value,
                    plan_code: document.getElementById('planCode').value,
                    plan_name: document.getElementById('planName').value,
                    description: document.getElementById('planDesc').value,
                    price_monthly: document.getElementById('planPriceMonthly').value,
                    price_yearly: document.getElementById('planPriceYearly').value,
                    max_users: document.getElementById('planMaxUsers').value,
                    max_storage_mb: document.getElementById('planMaxStorage').value,
                    max_transactions_per_month: document.getElementById('planMaxTrans').value,
                    sort_order: document.getElementById('planSort').value,
                    is_active: document.getElementById('planIsActive').checked,
                    features: features
                }
            }
        });

        if (formValues) {
            try {
                const response = await fetch('/admin/plans/save', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formValues)
                });
                const result = await response.json();
                if (result.success) {
                    Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
            }
        }
    }

    async function deletePlan(id, name) {
        const { value: confirm } = await Swal.fire({
            title: 'ยืนยันการลบ?',
            text: `คุณต้องการลบแพ็กเกจ ${name} ใช่หรือไม่?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            confirmButtonText: 'ลบเลย',
            cancelButtonText: 'ยกเลิก'
        });

        if (confirm) {
            try {
                const response = await fetch(`/admin/plans/${id}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
            }
        }
    }

