<div class="px-6 py-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">จัดการ Tenant</h2>
            <p class="text-slate-500 mt-1">ตรวจสอบและจัดการบริษัท/องค์กรที่ใช้งานระบบทั้งหมด</p>
        </div>
        <div class="flex items-center gap-3">
            <span
                class="px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg text-sm font-semibold border border-indigo-100 uppercase tracking-wider">
                Total: <%= tenants.length %>
            </span>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="md:col-span-2 relative">
                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                <input type="text" id="tenantSearch" placeholder="ค้นหาตามชื่อบริษัท, รหัส หรืออีเมล..."
                    class="w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all">
            </div>
            <div>
                <select id="statusFilter"
                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    <option value="all">สถานะทั้งหมด</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
            <div>
                <select id="planFilter"
                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    <option value="all">แพ็กเกจทั้งหมด</option>
                    <% plans.forEach(plan=> { %>
                        <option value="<%= plan.plan_code %>">
                            <%= plan.plan_name %>
                        </option>
                        <% }); %>
                </select>
            </div>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-50/50 border-bottom border-slate-100">
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-widest">บริษัท / Tenant
                            Code</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-widest text-center">
                            Plan</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-widest text-center">
                            Subscription Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-widest text-center">
                            Active Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-400 uppercase tracking-widest text-right">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% if (tenants && tenants.length> 0) { %>
                        <% tenants.forEach(tenant=> { %>
                            <tr class="hover:bg-slate-50/50 transition-colors tenant-row"
                                data-name="<%= tenant.company_name.toLowerCase() %>"
                                data-code="<%= tenant.tenant_code.toLowerCase() %>"
                                data-email="<%= (tenant.email || '').toLowerCase() %>"
                                data-status="<%= tenant.is_active ? 'active' : 'inactive' %>"
                                data-plan="<%= tenant.subscription_plan %>">
                                <td class="px-6 py-5">
                                    <div class="flex items-center gap-4">
                                        <div
                                            class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center text-slate-600 font-bold uppercase overflow-hidden">
                                            <% if (tenant.logo_url) { %>
                                                <img src="<%= tenant.logo_url %>" alt="Logo"
                                                    class="w-full h-full object-cover">
                                                <% } else { %>
                                                    <%= tenant.company_name.substring(0, 2) %>
                                                        <% } %>
                                        </div>
                                        <div>
                                            <div class="font-bold text-slate-800">
                                                <%= tenant.company_name %>
                                            </div>
                                            <div class="text-xs text-slate-400 font-mono">
                                                <%= tenant.tenant_code %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-5 text-center">
                                    <% let planClass='bg-slate-100 text-slate-600' ; if
                                        (tenant.subscription_plan==='free' ) planClass='bg-blue-50 text-blue-600' ; if
                                        (tenant.subscription_plan==='basic' ) planClass='bg-emerald-50 text-emerald-600'
                                        ; if (tenant.subscription_plan==='professional' )
                                        planClass='bg-purple-50 text-purple-600' ; if
                                        (tenant.subscription_plan==='enterprise' )
                                        planClass='bg-amber-50 text-amber-600' ; %>
                                        <span class="px-3 py-1 rounded-full text-xs font-bold <%= planClass %>">
                                            <%= tenant.subscription_plan.toUpperCase() %>
                                        </span>
                                </td>
                                <td class="px-6 py-5 text-center">
                                    <% let subStatusClass='bg-slate-100 text-slate-600' ; if
                                        (tenant.subscription_status==='active' )
                                        subStatusClass='bg-emerald-100 text-emerald-700' ; if
                                        (tenant.subscription_status==='pending' )
                                        subStatusClass='bg-indigo-100 text-indigo-700' ; if
                                        (tenant.subscription_status==='suspended' )
                                        subStatusClass='bg-red-100 text-red-700' ; if
                                        (tenant.subscription_status==='expired' )
                                        subStatusClass='bg-amber-100 text-amber-700' ; %>
                                        <span
                                            class="px-3 py-1 rounded-lg text-[10px] font-bold uppercase tracking-wider <%= subStatusClass %>">
                                            <%= tenant.subscription_status %>
                                        </span>
                                        <% if (tenant.subscription_end_date) { %>
                                            <div class="text-[10px] text-slate-400 mt-1">
                                                Exp: <%= new Date(tenant.subscription_end_date).toLocaleDateString() %>
                                            </div>
                                            <% } %>
                                </td>
                                <td class="px-6 py-5 text-center">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" value="" class="sr-only peer" <%=tenant.is_active
                                            ? 'checked' : '' %>
                                        onchange="toggleTenantStatus(<%= tenant.id %>, this.checked)">
                                            <div
                                                class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-500">
                                            </div>
                                    </label>
                                </td>
                                <td class="px-6 py-5 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <% if (tenant.subscription_status==='pending' ) { %>
                                            <button
                                                onclick="approveTenant(<%= tenant.id %>, '<%= tenant.company_name %>')"
                                                class="flex items-center gap-1 px-3 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-xs font-bold transition-all shadow-lg shadow-indigo-600/20"
                                                title="Approve Tenant">
                                                <i class="fas fa-check"></i> อนุมัติ
                                            </button>
                                            <% } %>
                                                <button
                                                    onclick="openChangePlanModal(<%= tenant.id %>, '<%= tenant.company_name %>', '<%= tenant.subscription_plan %>')"
                                                    class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all"
                                                    title="Change Plan">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button
                                                    onclick="deleteTenant(<%= tenant.id %>, '<%= tenant.company_name %>')"
                                                    class="p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all"
                                                    title="Delete Tenant">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="px-6 py-12 text-center">
                                            <div class="flex flex-col items-center gap-3">
                                                <i class="fas fa-building text-4xl text-slate-100"></i>
                                                <p class="text-slate-400 font-medium">ไม่พบข้อมูล Tenant ในขณะนี้</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Change Plan Modal (Simple implementation using Swal) -->
    <template id="changePlanTemplate">
        <div class="text-left py-4">
            <label class="block text-sm font-medium text-slate-700 mb-2">เลือกแพ็กเกจใหม่</label>
            <select id="swalPlanId"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none mb-4">
                <% plans.forEach(plan=> { %>
                    <option value="<%= plan.id %>" data-code="<%= plan.plan_code %>">
                        <%= plan.plan_name %> (<%= plan.price_monthly %> THB/mo)
                    </option>
                    <% }); %>
            </select>

            <label class="block text-sm font-medium text-slate-700 mb-2">สถานะการชำระเงิน/Subscription</label>
            <select id="swalSubStatus"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none mb-4">
                <option value="active">Active</option>
                <option value="pending">Pending</option>
                <option value="suspended">Suspended</option>
                <option value="expired">Expired</option>
            </select>

            <label class="block text-sm font-medium text-slate-700 mb-2">วันหมดอายุ (เลือกได้)</label>
            <input type="date" id="swalEndDate"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 outline-none">
        </div>
    </template>
</div>

<script>
    // Filtering Logic
    const tenantSearch = document.getElementById('tenantSearch');
    const statusFilter = document.getElementById('statusFilter');
    const planFilter = document.getElementById('planFilter');
    const rows = document.querySelectorAll('.tenant-row');

    function filterTenants() {
        const searchTerm = tenantSearch.value.toLowerCase();
        const statusVal = statusFilter.value;
        const planVal = planFilter.value;

        rows.forEach(row => {
            const name = row.getAttribute('data-name');
            const code = row.getAttribute('data-code');
            const email = row.getAttribute('data-email');
            const status = row.getAttribute('data-status');
            const plan = row.getAttribute('data-plan');

            const matchesSearch = name.includes(searchTerm) || code.includes(searchTerm) || email.includes(searchTerm);
            const matchesStatus = statusVal === 'all' || status === statusVal;
            const matchesPlan = planVal === 'all' || plan === planVal;

            if (matchesSearch && matchesStatus && matchesPlan) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    tenantSearch.addEventListener('input', filterTenants);
    statusFilter.addEventListener('change', filterTenants);
    planFilter.addEventListener('change', filterTenants);

    // Approve Tenant
    async function approveTenant(id, companyName) {
        const { value: confirm } = await Swal.fire({
            title: 'ยืนยันการอนุมัติ?',
            text: `คุณต้องการอนุมัติการใช้งานของ ${companyName} ใช่หรือไม่?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#6366f1',
            confirmButtonText: 'ยืนยัน อนุมัติ',
            cancelButtonText: 'ยกเลิก'
        });

        if (confirm) {
            try {
                const response = await fetch(`/admin/tenants/${id}/approve`, {
                    method: 'POST',
                    headers: {
                        'X-CSRF-Token': getCsrfToken()
                    }
                });
                const result = await response.json();
                if (result.success) {
                    Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
            }
        }
    }

    // Toggle Status
    async function toggleTenantStatus(id, isActive) {
        try {
            const response = await fetch(`/admin/tenants/${id}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': getCsrfToken()
                },
                body: JSON.stringify({ is_active: isActive })
            });
            const result = await response.json();
            if (result.success) {
                Swal.fire({
                    title: 'สำเร็จ',
                    text: result.message,
                    icon: 'success',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                const rowToUpdate = [...rows].find(r => r.innerHTML.includes(`toggleTenantStatus(${id}`));
                if (rowToUpdate) rowToUpdate.setAttribute('data-status', isActive ? 'active' : 'inactive');
            } else {
                Swal.fire('Error', result.message, 'error');
            }
        } catch (err) {
            Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
        }
    }

    // Change Plan Modal
    async function openChangePlanModal(id, companyName, currentPlanCode) {
        const template = document.getElementById('changePlanTemplate');

        const { value: formValues } = await Swal.fire({
            title: `เปลี่ยนแพ็กเกจ: ${companyName}`,
            html: template.innerHTML,
            focusConfirm: false,
            showCancelButton: true,
            confirmButtonText: 'บันทึกการเปลี่ยน',
            cancelButtonText: 'ยกเลิก',
            didOpen: () => {
                const select = document.getElementById('swalPlanId');
                // Select current plan
                for (let i = 0; i < select.options.length; i++) {
                    if (select.options[i].getAttribute('data-code') === currentPlanCode) {
                        select.selectedIndex = i;
                        break;
                    }
                }
            },
            preConfirm: () => {
                return {
                    planId: document.getElementById('swalPlanId').value,
                    status: document.getElementById('swalSubStatus').value,
                    endDate: document.getElementById('swalEndDate').value
                }
            }
        });

        if (formValues) {
            try {
                const response = await fetch(`/admin/tenants/${id}/plan`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': getCsrfToken()
                    },
                    body: JSON.stringify(formValues)
                });
                const result = await response.json();
                if (result.success) {
                    Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
            }
        }
    }

    // Delete Tenant
    async function deleteTenant(id, companyName) {
        const { value: confirm } = await Swal.fire({
            title: 'ยืนยันการลบ?',
            text: `คุณต้องการลบข้อมูลของ ${companyName} ใช่หรือไม่? ข้อมูลทั้งหมดจะถูกระบุว่าลบแล้ว (Soft Delete)`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            confirmButtonText: 'ใช่, ลบเลย',
            cancelButtonText: 'ยกเลิก'
        });

        if (confirm) {
            try {
                const response = await fetch(`/admin/tenants/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'X-CSRF-Token': getCsrfToken()
                    }
                });
                const result = await response.json();
                if (result.success) {
                    Swal.fire('สำเร็จ', result.message, 'success').then(() => window.location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้', 'error');
            }
        }
    }
</script>

<style>
    .tenant-row:hover .w-10 {
        transform: scale(1.05);
        transition: all 0.2s ease-in-out;
    }
</style>