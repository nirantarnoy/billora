<div class="p-10">
    <!-- Header -->
    <header class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-bold text-slate-800">จัดการรายจ่ายและใบเสร็จ</h2>
            <p class="text-slate-500 text-sm">ตรวจสอบและจัดการข้อมูลรายจ่ายจากการสแกนใบเสร็จ (OCR)</p>
        </div>
        <div class="flex flex-wrap items-center gap-4">
            <button onclick="openModal()"
                class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-xl font-bold transition-all shadow-lg shadow-indigo-600/20 flex items-center gap-2">
                <i class="fas fa-cloud-upload-alt"></i> สแกนเอกสารใหม่
            </button>
            <a href="/samples/receipt_sample.png" download
                class="bg-indigo-50 text-indigo-600 px-6 py-2.5 rounded-2xl font-bold flex items-center gap-2 hover:bg-indigo-100 border border-indigo-100 transition-all text-sm">
                <i class="fas fa-download"></i> ดูตัวอย่าง
            </a>
        </div>
    </header>

    <!-- Filters -->
    <div class="bg-white p-6 rounded-[2rem] border border-slate-100 shadow-sm mb-10">
        <form action="/bills" method="GET" class="flex flex-wrap items-end gap-6 h-full">
            <div class="flex-1 min-w-[250px]">
                <label
                    class="block text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2 ml-1">ค้นหา</label>
                <div class="relative">
                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                    <input type="text" name="search" value="<%= search %>" placeholder="ชื่อร้านค้าหรือรายการ..."
                        class="w-full bg-slate-50 border border-slate-100 pl-11 pr-4 py-2.5 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 transition-all text-sm font-bold">
                </div>
            </div>

            <div class="flex flex-wrap gap-4">
                <div class="flex flex-col gap-2">
                    <label
                        class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">วันที่ในใบเสร็จ</label>
                    <div class="flex items-center gap-2 bg-slate-50 px-4 py-2.5 rounded-2xl border border-slate-100">
                        <input type="date" name="startDate" value="<%= startDate %>"
                            class="bg-transparent text-xs font-bold outline-none">
                        <span class="text-slate-300">-</span>
                        <input type="date" name="endDate" value="<%= endDate %>"
                            class="bg-transparent text-xs font-bold outline-none">
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label
                        class="text-[10px] font-bold text-slate-400 uppercase tracking-widest ml-1">วันที่ทำรายการ</label>
                    <div class="flex items-center gap-2 bg-slate-50 px-4 py-2.5 rounded-2xl border border-slate-100">
                        <input type="date" name="startUploadDate" value="<%= startUploadDate %>"
                            class="bg-transparent text-xs font-bold outline-none text-indigo-600">
                        <span class="text-slate-300">-</span>
                        <input type="date" name="endUploadDate" value="<%= endUploadDate %>"
                            class="bg-transparent text-xs font-bold outline-none text-indigo-600">
                    </div>
                </div>
            </div>

            <button type="submit"
                class="bg-slate-800 text-white px-8 py-3 rounded-2xl hover:bg-slate-900 transition-all font-bold shadow-xl shadow-slate-200 text-sm flex items-center gap-2">
                <i class="fas fa-filter"></i> กรองข้อมูล
            </button>
        </form>
    </div>

    <div class="bg-white rounded-[32px] overflow-hidden border border-slate-100 shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b border-slate-100 bg-slate-50/50">
                        <th class="px-8 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            ร้านค้า</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            วันที่ในบิล / วันที่ทำรายการ</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            VAT
                        </th>
                        <th class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            ยอดรวม</th>
                        <th
                            class="px-6 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-center">
                            หลักฐาน</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-slate-400 uppercase tracking-widest text-right">
                            จัดการ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    <% if (bills.length===0) { %>
                        <tr>
                            <td colspan="6" class="px-8 py-24 text-center text-slate-400">ไม่พบข้อมูล</td>
                        </tr>
                        <% } %>
                            <% bills.forEach(bill=> { %>
                                <tr class="hover:bg-slate-50 transition-all group">
                                    <td class="px-8 py-5">
                                        <div class="flex items-center gap-2">
                                            <span class="font-bold text-slate-800">
                                                <%= bill.store_name || 'ไม่ระบุ' %>
                                            </span>
                                            <% if (bill.ai_audit_result) { %>
                                                <span
                                                    class="flex items-center gap-1 px-1.5 py-0.5 bg-indigo-50 text-indigo-500 rounded text-[9px] font-bold border border-indigo-100"
                                                    title="ตรวจสอบโดย AI">
                                                    <i class="fas fa-wand-magic-sparkles"></i> AI
                                                </span>
                                                <% } %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="flex flex-col">
                                            <span class="text-sm font-bold text-slate-700 mb-0.5">
                                                <i class="fas fa-receipt text-[10px] mr-1.5 text-slate-400"></i>
                                                <%= bill.date ? new Date(bill.date).toLocaleDateString('th-TH') : '-' %>
                                            </span>
                                            <span class="text-[10px] font-medium text-slate-400">
                                                <i class="fas fa-clock text-[9px] mr-1.5 text-slate-300"></i>
                                                <%= new Date(bill.created_at).toLocaleDateString('th-TH') %>
                                                    <%= new Date(bill.created_at).toLocaleTimeString('th-TH',
                                                        {hour: '2-digit' , minute:'2-digit'}) %> น.
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5 text-right font-bold text-indigo-600 text-sm">฿<%=
                                            Number(bill.vat || 0).toLocaleString(undefined, {minimumFractionDigits: 2})
                                            %>
                                    </td>
                                    <td class="px-6 py-5 text-right font-bold text-slate-800">฿<%=
                                            Number(bill.total_amount).toLocaleString(undefined, {minimumFractionDigits:
                                            2}) %>
                                    </td>
                                    <td class="px-6 py-5 text-center">
                                        <div class="flex justify-center">
                                            <% if (bill.image_path) { %>
                                                <button
                                                    onclick="viewImage('/<%= bill.image_path.replace(/\\/g, '/') %>')"
                                                    class="text-indigo-500 hover:text-indigo-600 transition-all">
                                                    <i class="fas fa-image text-xl"></i>
                                                </button>
                                                <% } %>
                                        </div>
                                    </td>
                                    <td class="px-8 py-5 text-right">
                                        <div class="flex items-center justify-end gap-3">
                                            <% if (bill.sync_status==='pending' || bill.sync_status==='failed' ) { %>
                                                <button onclick="syncBill(<%= bill.id %>)"
                                                    class="text-amber-500 hover:text-amber-600 transition-colors"
                                                    title="Sync to External System">
                                                    <i class="fas fa-sync"></i>
                                                </button>
                                                <% } else if (bill.sync_status==='synced' ) { %>
                                                    <i class="fas fa-check-circle text-indigo-500 shadow-sm"
                                                        title="Synced: <%= bill.external_id %>"></i>
                                                    <% } %>

                                                        <button onclick="editBill(this)" data-id="<%= bill.id %>"
                                                            data-store="<%= bill.store_name %>"
                                                            data-date="<%= bill.date ? new Date(bill.date).toISOString().split('T')[0] : '' %>"
                                                            data-amount="<%= bill.total_amount %>"
                                                            data-vat="<%= bill.vat %>"
                                                            data-items='<%= JSON.stringify(bill.items || []) %>'
                                                            class="text-slate-400 hover:text-indigo-600 transition-colors">
                                                            <i class="fas fa-edit"></i>
                                                        </button>

                                                        <button onclick="viewDetails(this)"
                                                            data-items='<%= JSON.stringify(bill.items || []) %>'
                                                            data-store='<%= bill.store_name || "ไม่ระบุ" %>'
                                                            data-total='<%= bill.total_amount || 0 %>'
                                                            data-vat='<%= bill.vat || 0 %>'
                                                            class="text-slate-400 hover:text-indigo-600 transition-colors"><i
                                                                class="fas fa-list-ul"></i></button>
                                                        <button onclick="deleteBill(<%= bill.id %>)"
                                                            class="text-slate-300 hover:text-rose-500 transition-colors"><i
                                                                class="fas fa-trash-alt"></i></button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit Bill Modal -->
<div id="edit-bill-modal"
    class="hidden fixed inset-0 z-[100] bg-slate-900/60 backdrop-blur-sm items-center justify-center p-6">
    <div class="bg-white w-full max-w-2xl rounded-[32px] shadow-2xl overflow-hidden shadow-indigo-900/10">
        <div class="p-8 border-b border-slate-100 flex items-center justify-between bg-white">
            <div>
                <h3 class="text-2xl font-black text-slate-800">แก้ไขข้อมูลบิล</h3>
                <p class="text-slate-400 text-sm">ตรวจสอบและแก้ไขสิ่งที่ AI อ่านผิดพลาด</p>
            </div>
            <button onclick="closeEditModal()"
                class="w-10 h-10 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 hover:bg-rose-50 hover:text-rose-500 transition-all">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="edit-bill-form" class="p-8 space-y-6 max-h-[70vh] overflow-y-auto no-scrollbar">
            <input type="hidden" id="edit-bill-id">

            <div class="grid grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label
                        class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">ชื่อร้านค้า</label>
                    <input type="text" id="edit-store-name" required
                        class="w-full bg-slate-50 border border-slate-100 px-4 py-3 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 transition-all font-bold text-slate-800">
                </div>
                <div class="space-y-2">
                    <label
                        class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">วันที่ในบิล</label>
                    <input type="date" id="edit-date" required
                        class="w-full bg-slate-50 border border-slate-100 px-4 py-3 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 transition-all font-bold text-indigo-600">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">ยอดรวมภาษี
                        (VAT)</label>
                    <input type="number" step="0.01" id="edit-vat"
                        class="w-full bg-slate-50 border border-slate-100 px-4 py-3 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 transition-all font-bold text-slate-800">
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">ยอดรวมสุทธิ
                        (Grand Total)</label>
                    <input type="number" step="0.01" id="edit-total" required
                        class="w-full bg-slate-50 border border-slate-100 px-4 py-3 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 transition-all font-bold text-indigo-600">
                </div>
            </div>

            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <label
                        class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">รายการสินค้า</label>
                    <button type="button" onclick="addItem()"
                        class="text-xs font-bold text-indigo-600 hover:text-indigo-700">
                        <i class="fas fa-plus-circle mr-1"></i> เพิ่มรายการ
                    </button>
                </div>
                <div id="edit-items-container" class="space-y-3">
                    <!-- Items -->
                </div>
            </div>

            <div class="pt-4 flex gap-4">
                <button type="submit"
                    class="flex-1 bg-slate-800 hover:bg-slate-900 text-white py-4 rounded-2xl font-bold transition-all">บันทึกการแก้ไข</button>
                <button type="button" onclick="closeEditModal()"
                    class="px-8 py-4 rounded-2xl font-bold text-slate-400 hover:bg-slate-50 transition-all">ยกเลิก</button>
            </div>
        </form>
    </div>
</div>

<!-- Image Modal -->
<div id="image-modal"
    class="hidden fixed inset-0 z-[100] bg-slate-900/90 backdrop-blur-md items-center justify-center p-6"
    onclick="closeImageModal()">
    <div class="relative max-w-5xl w-full flex flex-col items-center" onclick="event.stopPropagation()">
        <img id="modal-img" src="" class="max-h-[80vh] object-contain rounded-2xl shadow-2xl">
        <button onclick="closeImageModal()"
            class="mt-6 bg-white/20 text-white px-8 py-3 rounded-xl font-bold backdrop-blur-md hover:bg-white/30 transition-all">ปิดหน้าต่าง</button>
    </div>
</div>

<script>
    function viewImage(path) {
        document.getElementById('modal-img').src = path;
        document.getElementById('image-modal').classList.remove('hidden');
        document.getElementById('image-modal').classList.add('flex');
    }

    function closeImageModal() {
        document.getElementById('image-modal').classList.add('hidden');
        document.getElementById('image-modal').classList.remove('flex');
    }

    async function deleteBill(id) {
        const result = await Swal.fire({
            title: 'ยืนยันการลบ?',
            text: "ข้อมูลนี้จะถูกลบถาวร",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#f43f5e',
            confirmButtonText: 'ลบทิ้ง',
            cancelButtonText: 'ยกเลิก',
            customClass: { popup: 'rounded-3xl' }
        });

        if (result.isConfirmed) {
            const res = await fetch(`/api/bills/${id}`, {
                method: 'DELETE',
                headers: { 'X-CSRF-TOKEN': getCsrfToken() }
            });
            const data = await res.json();
            if (data.success) window.location.reload();
        }
    }

    async function syncBill(id) {
        try {
            const res = await fetch(`/api/bills/${id}/sync`, {
                method: 'POST',
                headers: { 'X-CSRF-TOKEN': getCsrfToken() }
            });
            const data = await res.json();
            if (data.success) {
                Swal.fire('สำเร็จ', `ส่งข้อมูลเข้าระบบเรียบร้อย (External ID: ${data.external_id})`, 'success').then(() => window.location.reload());
            } else {
                Swal.fire('ผิดพลาด', data.error, 'error');
            }
        } catch (err) {
            Swal.fire('ผิดพลาด', 'ไม่สามารถเชื่อมต่อระบบได้', 'error');
        }
    }

    function editBill(btn) {
        const id = btn.getAttribute('data-id');
        const store = btn.getAttribute('data-store');
        const date = btn.getAttribute('data-date');
        const amount = btn.getAttribute('data-amount');
        const vat = btn.getAttribute('data-vat');
        const items = JSON.parse(btn.getAttribute('data-items') || '[]');

        document.getElementById('edit-bill-id').value = id;
        document.getElementById('edit-store-name').value = store || '';
        document.getElementById('edit-date').value = date;
        document.getElementById('edit-vat').value = vat || 0;
        document.getElementById('edit-total').value = amount || 0;

        const container = document.getElementById('edit-items-container');
        container.innerHTML = '';
        items.forEach(item => container.appendChild(createItemRow(item)));

        document.getElementById('edit-bill-modal').classList.remove('hidden');
        document.getElementById('edit-bill-modal').classList.add('flex');
    }

    function createItemRow(item = {}) {
        const div = document.createElement('div');
        div.className = 'item-row grid grid-cols-12 gap-3 items-center bg-slate-50 p-4 rounded-2xl border border-slate-100';
        div.innerHTML = `
            <div class="col-span-6">
                <input type="text" placeholder="ชื่อสินค้า" class="item-name w-full bg-transparent text-sm font-bold text-slate-800 outline-none" value="${item.name || item.product_name || ''}">
            </div>
            <div class="col-span-2">
                <input type="number" placeholder="จำนวน" class="item-qty w-full bg-transparent text-sm font-bold text-slate-800 outline-none" value="${item.qty || item.quantity || 1}">
            </div>
            <div class="col-span-3">
                <input type="number" step="0.01" placeholder="ราคา" class="item-price w-full bg-transparent text-sm font-bold text-indigo-600 outline-none" value="${item.price || 0}">
            </div>
            <div class="col-span-1 text-right">
                <button type="button" onclick="this.parentElement.parentElement.remove()" class="text-rose-400 hover:text-rose-600"><i class="fas fa-minus-circle"></i></button>
            </div>
        `;
        return div;
    }

    function addItem() {
        document.getElementById('edit-items-container').appendChild(createItemRow());
    }

    function closeEditModal() {
        document.getElementById('edit-bill-modal').classList.add('hidden');
        document.getElementById('edit-bill-modal').classList.remove('flex');
    }

    document.getElementById('edit-bill-form').onsubmit = async (e) => {
        e.preventDefault();
        const id = document.getElementById('edit-bill-id').value;
        const items = Array.from(document.querySelectorAll('.item-row')).map(row => ({
            product_name: row.querySelector('.item-name').value,
            quantity: parseFloat(row.querySelector('.item-qty').value) || 0,
            price: parseFloat(row.querySelector('.item-price').value) || 0
        }));

        const data = {
            store_name: document.getElementById('edit-store-name').value,
            date: document.getElementById('edit-date').value,
            vat: parseFloat(document.getElementById('edit-vat').value) || 0,
            total_amount: parseFloat(document.getElementById('edit-total').value) || 0,
            items: items
        };

        const res = await fetch(`/api/bills/${id}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': getCsrfToken() },
            body: JSON.stringify(data)
        });
        const result = await res.json();
        if (result.success) window.location.reload();
        else alert(result.error);
    }

    function viewDetails(btn) {
        const items = JSON.parse(btn.getAttribute('data-items') || '[]');
        const storeName = btn.getAttribute('data-store') || 'ไม่ระบุ';
        const totalAmount = parseFloat(btn.getAttribute('data-total')) || 0;
        const vat = parseFloat(btn.getAttribute('data-vat')) || 0;

        const itemsHtml = items.map(item => `
            <div class="py-3 border-b border-slate-100 last:border-0 text-left">
                <div class="flex justify-between items-start">
                    <span class="text-sm font-bold text-slate-800 flex-1">${item.name || item.product_name || 'ไม่ระบุ'}</span>
                    <span class="text-sm font-black text-indigo-600 ml-4">฿${Number(item.total || (item.qty || item.quantity || 1) * (item.price || 0)).toLocaleString(undefined, { minimumFractionDigits: 2 })}</span>
                </div>
                <div class="text-[10px] text-slate-400">จำนวน: ${item.qty || item.quantity || 1} x ฿${Number(item.price || 0).toLocaleString()}</div>
            </div>
        `).join('');

        Swal.fire({
            title: `<div class="text-left"><p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">รายละเอียดรายการ</p><h3 class="text-xl font-bold text-slate-800">${storeName}</h3></div>`,
            html: `<div class="mt-4 max-h-60 overflow-y-auto pr-2 custom-scrollbar">${itemsHtml || 'ไม่มีรายการ'}</div>
                   <div class="mt-6 pt-6 border-t-2 border-dashed border-slate-100 space-y-2">
                        <div class="flex justify-between text-slate-500 text-sm"><span>VAT 7%</span><span>฿${Number(vat).toLocaleString(undefined, { minimumFractionDigits: 2 })}</span></div>
                        <div class="flex justify-between items-center p-4 bg-slate-50 rounded-2xl"><span class="font-bold">Total</span><span class="text-xl font-black text-indigo-600">฿${Number(totalAmount).toLocaleString(undefined, { minimumFractionDigits: 2 })}</span></div>
                   </div>`,
            showCloseButton: true, showConfirmButton: false, customClass: { popup: 'rounded-[32px] p-8 max-w-lg w-full' }
        });
    }
</script>

<%- include('partials/scan-modal') %>
    <script>window.SHOULD_RELOAD_ON_UPLOAD = true;</script>