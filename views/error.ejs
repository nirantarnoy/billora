<div class="min-h-screen flex items-center justify-center bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 text-center">
        <div>
            <div class="mx-auto h-24 w-24 flex items-center justify-center rounded-full bg-red-100">
                <i class="fas fa-exclamation-triangle text-4xl text-red-600"></i>
            </div>
            <h2 class="mt-6 text-3xl font-extrabold text-slate-900">
                เกิดข้อผิดพลาด
            </h2>
            <p class="mt-2 text-sm text-slate-600">
                <%= typeof message !=='undefined' ? message : 'มีบางอย่างผิดปกติ โปรดลองใหม่อีกครั้ง' %>
            </p>
            <% if (typeof error !=='undefined' && process.env.NODE_ENV==='development' ) { %>
                <div
                    class="mt-4 p-4 bg-red-50 rounded-lg text-left overflow-auto max-h-48 text-xs text-red-800 font-mono">
                    <%= error.stack %>
                </div>
                <% } %>
        </div>
        <div class="mt-8">
            <a href="/dashboard"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500">
                <i class="fas fa-home mr-2"></i> กลับหน้าหลัก
            </a>
        </div>
    </div>
</div>